<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="android:navigationBarColor">@color/red_fc3</item>-->
<!--        <item name="android:windowLightNavigationBar">true</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_F7AB00</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="imageactivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/imageAnim</item>
    </style>

    <style name="selectedBaseDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_80000000</item>
        <item name="colorAccent">@color/color_F7AB00</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Base.Animation.Dialog.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="selectedDialog" parent="selectedBaseDialog">
        <item name="android:windowAnimationStyle">@style/Base.Animation.Dialog.Style</item>
    </style>

    <style name="TopPopAnim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/dd_menu_in</item>
        <item name="android:windowExitAnimation">@anim/dd_menu_out</item>
    </style>

    <style name="bottomPopAnim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_out</item>
    </style>

    <style name="chooseAnim" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/TopPopAnim</item>
    </style>

    <style name="publishchooseAnim" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/bottomPopAnim</item>
    </style>
</resources>
