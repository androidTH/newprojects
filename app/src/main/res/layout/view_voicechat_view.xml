<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin_10"
    android:paddingTop="@dimen/padding_16"
    android:paddingRight="@dimen/margin_5"
    android:paddingBottom="@dimen/margin_5">
    <RelativeLayout
        android:id="@+id/rl_voicechat_headView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="8dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headView"
            style="@style/DefaultHeadStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:roundAsCircle="true"
            app:roundingBorderWidth="0.5dp"
            app:roundingBorderColor="@color/color_1A000000"/>
        <ImageView
            android:id="@+id/img_voicechat_auther"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_voicechat_servicesign"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/official_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/rl_voicechat_headView"
        android:layout_toRightOf="@+id/rl_voicechat_headView"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_5"
            android:singleLine="true"
            android:text="-------"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginRight="@dimen/height_65"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_voicechat_user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sex_bg_selector"
                android:drawableLeft="@drawable/sex_white_selector"
                android:drawablePadding="1dp"
                android:paddingLeft="3dp"
                android:paddingTop="0.5dp"
                android:paddingRight="3dp"
                android:paddingBottom="0.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/tv_voicechat_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="8sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/tv_datetype_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="@dimen/margin_10"-->
        <!--android:layout_toLeftOf="@+id/tv_date_more"-->
        <!--android:drawableTop="@mipmap/drink_nolimit_feed"-->
        <!--android:gravity="center"-->
        <!--android:text="吃饭"-->
        <!--android:textColor="@color/color_A9A9A9"-->
        <!--android:textSize="11sp" />-->
    <TextView
        android:id="@+id/tv_voicechat_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_12"
        android:drawableLeft="@mipmap/icon_discuss_more_feed"
        android:paddingRight="@dimen/margin_5"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_voicechat_headView"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@color/color_EFEFEF" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_8"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/padding_16"
            android:text="-----------------"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"/>

        <LinearLayout
            android:id="@+id/ll_voicechat_dowhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_5">

            <TextView
                android:id="@+id/tv_time_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/time_list_icon"
                android:drawablePadding="@dimen/margin_3"
                android:layout_marginRight="@dimen/margin_15"
                android:textStyle="bold"
                android:textColor="@color/color_888888"
                android:textSize="12sp" />

            <com.d6.android.app.widget.textinlineimage.TextInlineImage
                android:id="@+id/tv_voicechat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/dashang"
                android:drawablePadding="@dimen/margin_2"
                android:textStyle="bold"
                android:textColor="@color/color_888888"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_EFEFEF" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_content"
        android:paddingLeft="@dimen/margin_5">
        <TextView
            android:id="@+id/tv_voicechat_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:text=""/>
        <TextView
            android:id="@+id/tv_send_voicechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_8"
            android:drawableLeft="@mipmap/link_button"
            android:textColor="@color/color_333333" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_voicechat_timeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/ll_content"
        android:layout_marginRight="@dimen/margin_8"
        android:visibility="gone"
        android:src="@mipmap/yiguoqi_bg"/>
</RelativeLayout>