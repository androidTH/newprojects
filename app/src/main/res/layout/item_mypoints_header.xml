<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/iv_integral_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="@mipmap/icon_integral_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_30"
        android:layout_marginTop="@dimen/height_30"
        android:drawableLeft="@mipmap/intergal_white_coin"
        android:drawablePadding="@dimen/margin_8"
        android:text="剩余积分"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="2900"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/shape_20r_white"
        android:paddingLeft="15dp"
        android:paddingTop="@dimen/margin_5"
        android:paddingRight="15dp"
        android:paddingBottom="@dimen/margin_5"
        android:text="充值"
        android:textColor="@color/color_F79C00"
        android:textSize="16sp" />
</RelativeLayout>
