<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_date_white_3r">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_headView"
        style="@style/DefaultImageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:roundAsCircle="false"
        app:roundBottomEnd="false"
        app:roundBottomLeft="false"
        app:roundBottomRight="false"
        app:roundBottomStart="false"
        app:roundTopEnd="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundTopStart="true"
        app:roundedCornerRadius="@dimen/margin_2"
        app:viewAspectRatio="1.0" />

    <LinearLayout
        android:id="@+id/ll_userinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/ll_sendliked"
        android:gravity="center_vertical"
        android:background="@drawable/shape_top_bottom_yy_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_5"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/ic_sex_bg_selector"
            android:drawableLeft="@drawable/sex_white_selector"
            android:drawablePadding="1dp"
            android:paddingLeft="3dp"
            android:paddingTop="0.5dp"
            android:paddingRight="3dp"
            android:paddingBottom="0.5dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@drawable/ic_sex_bg_selector"
            android:paddingLeft="3dp"
            android:paddingTop="0.5dp"
            android:paddingRight="3dp"
            android:paddingBottom="0.5dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_16"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="@mipmap/vip_gold"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sendliked"
        android:layout_below="@+id/user_headView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_receivedliked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>