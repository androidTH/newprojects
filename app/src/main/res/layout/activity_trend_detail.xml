<?xml version="1.0" encoding="utf-8"?>
<com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:id="@+id/rl_root"
    tools:context=".activities.TrendDetailActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/title_bar_size">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/full_close_button"
            android:padding="12dp"
            android:id="@+id/tv_close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tv_count"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:text="0/0"
            android:textSize="@dimen/textSize"
            android:background="@drawable/shape_4d_black"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_dynamic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@mipmap/full_more_button"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_7D000000"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/DefaultCircleHeadStyle"
            android:layout_marginLeft="16dp"
            android:id="@+id/headView"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_trend_uname"
            android:layout_alignTop="@+id/headView"
            android:gravity="center_vertical"
            android:textColor="@color/title_bar"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/headView"
            android:drawablePadding="8dp"
            android:textSize="@dimen/TextSize_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/tv_trend_uage"
            android:layout_toRightOf="@+id/tv_trend_uname"
            android:layout_alignTop="@+id/tv_trend_uname"
            android:layout_marginTop="@dimen/margin_3"
            android:gravity="center_vertical"
            android:drawablePadding="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="0.5dp"
            android:paddingBottom="0.5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/ic_sex_circle_newbg_selector"
            android:drawableLeft="@drawable/sex_white_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_12"
            android:layout_below="@+id/tv_trend_uname"
            android:layout_alignLeft="@+id/tv_trend_uname"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:id="@+id/tv_time"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headView"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="-"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/tv_appraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_toLeftOf="@+id/tv_comment"
            android:drawableLeft="@drawable/ic_praise_selector"
            android:drawablePadding="5dp"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/color_888888"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_content"
            android:drawableLeft="@mipmap/ic_comment_white"
            android:paddingRight="16dp"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="0"
            android:layout_marginBottom="20dp"
            android:textColor="@color/color_888888"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_appraise"
            android:layout_alignTop="@+id/tv_appraise"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:background="@drawable/shape_comment_circle_bg"
            android:paddingLeft="12dp"
            android:text="我来说两句"
            android:textColor="@color/color_66ffffff"
            android:textSize="@dimen/textSize"
            android:id="@+id/tv_comment_content"
            android:layout_alignBottom="@+id/tv_appraise"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>
</com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout>