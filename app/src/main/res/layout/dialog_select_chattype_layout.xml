<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/string_chat_setting"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="设置后,完成以下操作对方才能和你私聊"
        android:textColor="@color/color_888888"
        android:textSize="12sp"
        android:visibility="gone" />
    <!--<View-->
    <!--android:background="@color/color_EFEFEF"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"/>-->
    <LinearLayout
        android:id="@+id/ll_line_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_line_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/string_linechat"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="对方可直接和你私聊"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/color_EFEFEF" />

    <LinearLayout
        android:id="@+id/ll_agree_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_agree_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/string_agree_openchat"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="对方发出申请你同意可私聊"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EFEFEF" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_F5F5F5"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="取   消"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>