<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_8"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_groupcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_moreusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            android:drawableRight="@mipmap/center_moreicon"
            android:drawablePadding="@dimen/margin_3" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_grouplist"
            android:layout_below="@+id/tv_groupcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_groupname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_8"
        android:clickable="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="群名称"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:drawablePadding="@dimen/margin_10"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_30"
            android:drawablePadding="@dimen/margin_3"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_13"
            android:drawableRight="@mipmap/center_moreicon"
            android:drawablePadding="@dimen/margin_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_invitemsg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_below="@+id/rl_important"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="消息免打扰"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.d6.android.app.widget.switchbutton.SwitchButton
            android:id="@+id/sw_groupmessage_notfaction"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="8dp"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.7"
            app:kswThumbDrawable="@drawable/shape_switchthum" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_important"
        android:background="@color/color_F5F5F5" />
    <RelativeLayout
        android:id="@+id/rl_member_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="群号"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_50"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:text="(分享给好友即可邀请)"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_groupnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_30"
            android:drawablePadding="@dimen/margin_3"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_13"
            android:drawableRight="@mipmap/center_moreicon"
            android:drawablePadding="@dimen/margin_3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_group_leave"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_F7AB00" />
</LinearLayout>
