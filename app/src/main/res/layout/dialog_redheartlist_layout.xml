<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_redheart_title"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="12dp"
        android:text="充值"
        android:layout_marginBottom="12dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="12dp"
        android:id="@+id/tv_redheart_close"
        android:drawableRight="@mipmap/window_close_orangebtn"/>

    <View
        android:layout_below="@+id/tv_redheart_title"
        android:layout_width="match_parent"
        android:background="@color/color_D8D8D8"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_5"
        android:id="@+id/swiprl_redheart_list"
        android:layout_below="@+id/tv_redheart_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="10红心=1元，充值越多优惠越大哦"
        android:textColor="@color/color_888888"
        android:textSize="12dp"
        android:visibility="gone"
        android:id="@+id/tv_integral_explanation"
        android:layout_below="@+id/swiprl_redheart_list" />
</RelativeLayout>