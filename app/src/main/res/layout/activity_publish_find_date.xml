<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:text="地区"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:paddingLeft="@dimen/padding_16"
                    android:text=""
                    android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
                    android:paddingRight="@dimen/padding_16"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_area"
                    android:paddingLeft="@dimen/padding_16"
                    android:text="城市"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_below="@+id/tv_area"
                    android:paddingLeft="@dimen/padding_16"
                    android:text=""
                    android:hint="请输入"
                    android:paddingRight="@dimen/padding_16"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:layout_below="@+id/tv_city"
                    android:text="开始时间"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_city"
                    android:layout_marginLeft="80dp"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_16"
                    android:text=""
                    android:hint="约会报名开始时间"
                    android:paddingRight="@dimen/padding_16"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
                    android:gravity="center_vertical|right" />
                <View style="@style/view_line_h"
                    android:layout_marginLeft="@dimen/padding_16"
                    android:layout_marginRight="@dimen/padding_16"
                    android:layout_alignBottom="@+id/tv_city"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_startTime"
                    android:paddingLeft="@dimen/padding_16"
                    android:text="结束时间"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_startTime"
                    android:layout_marginLeft="80dp"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/padding_16"
                    android:text=""
                    android:hint="约会报名结束时间"
                    android:paddingRight="@dimen/padding_16"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
                    android:gravity="center_vertical|right" />
                <View style="@style/view_line_h"
                    android:layout_marginLeft="@dimen/padding_16"
                    android:layout_marginRight="@dimen/padding_16"
                    android:layout_alignBottom="@+id/tv_startTime"/>
            </RelativeLayout>
            <View style="@style/view_line_h"
                android:layout_height="6dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/et_content"
                android:background="@null"
                android:gravity="top"
                style="@style/editStyle"
                android:textColorHint="#7e786b"
                android:maxLength="1000"
                android:padding="@dimen/padding_16"
                android:hint="聪明的你会目标明确、清晰。让他/她主动关注你......"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#7e786b"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#ebebeb"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="20dp"
                android:text="严禁上传淫秽色情等图片或不良信息违者封号！"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_orange_rounded"
                android:text="发布"
                android:id="@+id/btn_sure"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
