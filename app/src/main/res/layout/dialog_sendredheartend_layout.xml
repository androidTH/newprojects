<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_white_8r"
        android:paddingTop="@dimen/margin_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sendredheart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/redheart_small"
            android:drawablePadding="@dimen/margin_6"
            android:gravity="center"
            android:text="已经送完了"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_redheart_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/color_333333"
            android:text="ss"
            android:textSize="15sp" />
        <View
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ECECEC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_redheart_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_cancel"
                android:textColor="@color/color_888888"
                android:textStyle="bold"
                android:textSize="15sp" />
            <View
                android:id="@+id/view_02"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_ECECEC" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_redheart_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="购买"
                    android:textColor="@color/color_F7AB00"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_toRightOf="@+id/tv_redheart_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@mipmap/redheart_small"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>