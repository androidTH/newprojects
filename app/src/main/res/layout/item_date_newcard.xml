<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_2"
    android:layout_marginRight="@dimen/margin_2"
    app:cardBackgroundColor="@color/color_666666"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="0dp"
    app:cardMaxElevation="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/rl_man_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            style="@style/DefaultImageStyle"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_9r_black_33"/>

        <include layout="@layout/layout_men_date_big" />

        <RelativeLayout
            android:id="@+id/rl_small_mendate_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--之前的布局-->
            <RelativeLayout
                android:id="@+id/rl_date_menheadView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="25dp"
                android:layout_marginRight="@dimen/margin_10">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/headView"
                    style="@style/DefaultCircleHeadStyle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:roundAsCircle="true" />

                <ImageView
                    android:id="@+id/img_date_menauther"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_15"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_vistorfollownums"
                android:layout_alignTop="@+id/rl_date_menheadView"
                android:layout_toRightOf="@+id/rl_date_menheadView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="----"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_name"
                    android:layout_toRightOf="@+id/tv_name"
                    android:layout_marginTop="@dimen/margin_2"
                    android:background="@drawable/ic_sex_circle_bg_selector"
                    android:drawableLeft="@drawable/sex_white_selector"
                    android:drawablePadding="1dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="0.5dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="0.5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_name"
                    android:layout_toRightOf="@+id/tv_sex"
                    android:layout_marginTop="@dimen/margin_2"
                    android:background="@drawable/ic_sex_circle_bg_selector"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="0.5dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="0.5dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_name"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/tv_age"
                    android:layout_marginTop="@dimen/margin_2"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_like"
                    android:layout_below="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center_horizontal"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vistor_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/margin_10"
                        android:textSize="12sp" />

                    <com.d6zone.android.app.widget.textinlineimage.TextInlineImage
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_vistorfollownums"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/rl_date_menheadView"
                android:gravity="center_vertical"
                android:maxLength="5"
                android:text="--"
                android:textColor="@color/textColor99"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_date_menheadView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_below="@+id/tv_content"
                android:layout_above="@+id/rl_men_samal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_18"
                android:paddingRight="@dimen/margin_15"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_mydate_images"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@drawable/shapecard_2r_33"
                    android:padding="@dimen/margin_5"
                    android:minHeight="88dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_men_samal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_15"
                android:paddingRight="@dimen/margin_20"
                android:layout_alignParentBottom="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_mydate_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_22"
                    android:layout_marginTop="@dimen/margin_10" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_mydate_tags"
                    android:layout_marginLeft="@dimen/margin_22"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_25"
                    android:drawableLeft="@mipmap/boy_profession_whiteicon"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="职业 "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_zuojia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_job"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_25"
                    android:drawableLeft="@mipmap/boy_car_whiteicon"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="座驾"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_aihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_zuojia"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_25"
                    android:drawableLeft="@mipmap/boy_hobby_whiteicon"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="职业 "
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:id="@+id/rl_date_menbangdan_small"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_aihao"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_3"
                    android:visibility="gone"
                    android:layout_height="40dp">
                    <View
                        android:id="@+id/user_bangdangline"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/height_40"
                        android:layout_height="0.5dp"
                        android:background="@color/color_26FFFFFF"/>
                    <com.d6zone.android.app.widget.textinlineimage.TextInlineImage
                        android:id="@+id/tv_date_menbangdan_smallshow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="魅力榜月榜："
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginTop="@dimen/margin_3"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_date_menbangdan_smallshow"
                        android:src="@mipmap/listbutton_icon" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imageViewbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <include
        android:id="@+id/rl_women_perfect"
        layout="@layout/item_women_perfect"
        android:visibility="gone" />
    <include
        android:id="@+id/rl_women_bangdan_layout"
        layout="@layout/date_bangdan_layout"
        android:visibility="gone" />
</android.support.v7.widget.CardView>
