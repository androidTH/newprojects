<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="260dp">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_55"
        android:layout_toLeftOf="@+id/ll_middle"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/bangdan_two"
                style="@style/DefaultCircleNoHeadStyle"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="1dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/rankinglist_two"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bangdantwo_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:maxWidth="130dp"
            android:singleLine="true"
            android:text="加载中..."
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_bangdantwo_nicksex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_nick"
                android:background="@drawable/ic_sex_bg_selector"
                android:paddingLeft="3dp"
                android:paddingTop="0.5dp"
                android:paddingRight="3dp"
                android:paddingBottom="0.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_bangdantwo_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_receivedliked_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@mipmap/redheart_small"
            android:drawablePadding="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/bangdan_one"
                style="@style/DefaultCircleNoHeadStyle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="1dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/rankinglist_one"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_bangdanone_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:maxWidth="130dp"
            android:singleLine="true"
            android:text="加载中…"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_bangdanone_nicksex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_nick"
                android:background="@drawable/ic_sex_bg_selector"
                android:paddingLeft="3dp"
                android:paddingTop="0.5dp"
                android:paddingRight="3dp"
                android:paddingBottom="0.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_bangdanone_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_receivedliked_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@mipmap/redheart_small"
            android:drawablePadding="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/ll_middle"
        android:layout_marginTop="@dimen/margin_55"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/bangdan_three"
                style="@style/DefaultCircleNoHeadStyle"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="1dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/rankinglist_three"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_bangdanthree_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:maxWidth="130dp"
            android:singleLine="true"
            android:text="加载中…"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bangdanthree_nicksex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_nick"
                android:background="@drawable/ic_sex_bg_selector"
                android:paddingLeft="3dp"
                android:paddingTop="0.5dp"
                android:paddingRight="3dp"
                android:paddingBottom="0.5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_bangdanthree_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_receivedliked_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@mipmap/redheart_small"
            android:drawablePadding="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>