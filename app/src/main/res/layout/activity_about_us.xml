<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/DefaultImageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_12"
            android:id="@+id/imageView"
            app:viewAspectRatio="2.058" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_blue_vertical_bg"
            android:drawablePadding="2dp"
            android:padding="@dimen/padding_12"
            android:textSize="16sp"
            android:text="核心优势" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_12">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="44dp"
                android:src="@mipmap/ic_about_us_yz"
                android:layout_marginRight="8dp"
                android:layout_height="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:id="@+id/tv_1"
                android:drawableBottom="@drawable/shape_yellow_horizontal_bg"
                android:text="优质"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拥有海量高富帅和女神，10000+会员广泛活跃在全球，不论身处何地，让每一个人不孤单"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/tv_1"
                android:textColor="@color/textColor99"
                android:layout_below="@+id/tv_1"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_12">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="44dp"
                android:src="@mipmap/ic_about_us_gx"
                android:layout_marginRight="8dp"
                android:layout_height="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv2"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:id="@+id/tv_2"
                android:drawableBottom="@drawable/shape_yellow_horizontal_bg"
                android:text="高效"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客服工作时间到凌晨一点，深度分析您的需求，力争在最短时间内以更加人性化的角度去为你匹配"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/tv_2"
                android:textColor="@color/textColor99"
                android:layout_below="@+id/tv_2"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_12">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="44dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_about_us_sm"
                android:layout_height="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv3"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:id="@+id/tv_3"
                android:drawableBottom="@drawable/shape_yellow_horizontal_bg"
                android:text="私密"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拥有严格到身份认证机制，全程人工审核信息，档案进行三重加密，尽最大努力维护您征友过程的安全"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/tv_3"
                android:textColor="@color/textColor99"
                android:layout_below="@+id/tv_3"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_blue_vertical_bg"
            android:drawablePadding="2dp"
            android:padding="@dimen/padding_12"
            android:textSize="16sp"
            android:text="关于我们" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="超过一万人首选的私密社交平台"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我们通过人工审核，技术屏蔽以及会员投诉等方式屏蔽不良会员，我们最大努力去维护征友会员的质量，征友过程的安全。我们服务于真诚寻约的单身人群，建立严格的身份认证机制和会员投诉机制"
            android:textColor="@color/textColor99"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="@dimen/padding_12"/>
        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp"-->
            <!--android:id="@+id/mRecyclerView"-->
            <!--android:layout_marginTop="16dp"/>-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none"
            android:layout_marginBottom="80dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="1dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="定位"
                            android:id="@+id/tv1"
                            android:drawableTop="@mipmap/ic_about_us1"
                            android:drawablePadding="4dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="优质、高效、私密"
                            android:textColor="@color/textColor99"
                            android:layout_below="@+id/tv1"
                            android:textSize="12sp"
                            android:drawablePadding="4dp"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="理念"
                            android:drawableTop="@mipmap/ic_about_us2"
                            android:drawablePadding="4dp"
                            android:id="@+id/tv2"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:text="精准快速的解决每一个优质会员的需求，并将平台口碑作为最终追求"
                            android:textColor="@color/textColor99"
                            android:layout_below="@+id/tv2"
                            android:drawablePadding="4dp"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="理念"
                            android:id="@+id/tv3"
                            android:drawableTop="@mipmap/ic_about_us3"
                            android:drawablePadding="4dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:text="精准快速的解决每一个优质会员的需求，并将平台口碑作为最终追求"
                            android:textColor="@color/textColor99"
                            android:layout_below="@+id/tv3"
                            android:drawablePadding="4dp"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>