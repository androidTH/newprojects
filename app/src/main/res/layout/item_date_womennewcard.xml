<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="@dimen/margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewAspectRatio="1.25"
            android:id="@+id/imageView"
            style="@style/DefaultImageStyle"/>

        <!--fresco:roundedCornerRadius="5dp"-->
        <!--fresco:roundTopLeft="true"-->
        <!--fresco:roundTopRight="true"-->
        <!--fresco:roundBottomLeft="false"-->
        <!--fresco:roundBottomRight="false"-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headView"
            style="@style/DefaultCircleHeadStyle"
            android:layout_below="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_alignTop="@+id/headView"
            android:layout_toRightOf="@+id/headView"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/textColor"
            android:textSize="@dimen/btnTextSize"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/headView"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/ic_sex_circle_bg_selector"
            android:drawableLeft="@drawable/sex_white_selector"
            android:drawablePadding="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_age"
            android:layout_alignTop="@+id/headView"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_4r_orange"
            android:drawableLeft="@mipmap/memberorder_icon_white"
            android:drawablePadding="@dimen/margin_2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="黄金会员"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_vistorfollownums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/headView"
            android:layout_marginTop="@dimen/margin_5"
            android:paddingRight="6dp"
            android:text="------"
            android:textColor="@color/color_888888"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/headView"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="广州"
            android:textColor="@color/color_888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headView"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="@dimen/margin_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="---"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_mydate_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:minHeight="30dp"
            android:paddingLeft="16dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
