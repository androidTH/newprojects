<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_userinfo_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_16"
    android:paddingLeft="@dimen/margin_10"
    android:paddingRight="@dimen/margin_5"
    android:paddingBottom="@dimen/padding_16">

    <LinearLayout
        android:id="@+id/ll_date_dowhat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_datetype_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_F7AB00"
            android:text="吃饭"/>
        <TextView
            android:id="@+id/tv_time_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="@color/color_888888"
            android:drawableLeft="@mipmap/invitation_time_icon"
            android:drawablePadding="@dimen/margin_3"
            android:text="倒计时:4天"/>
        <TextView
            android:id="@+id/tv_self_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/invitation_local_icon"
            android:drawablePadding="@dimen/margin_2"
            android:textSize="12sp"
            android:textColor="@color/color_888888"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="武汉"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/ll_date_dowhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:paddingRight="@dimen/padding_16"
            android:paddingLeft="5dp"
            android:text="-----------------" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/date_headView"
        style="@style/DefaultHeadStyle"
        android:layout_below="@+id/ll_content"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="@dimen/margin_5"
        app:roundAsCircle="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/date_headView"
        android:layout_toRightOf="@+id/date_headView"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:drawableRight="@drawable/sex_selector"
            android:drawablePadding="@dimen/margin_5"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:text="-------" />
        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="80dp"
            android:singleLine="true"
            android:text="30岁·175·74kg"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_send_date"
        android:layout_below="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:drawableLeft="@mipmap/date_button"/>
</RelativeLayout>