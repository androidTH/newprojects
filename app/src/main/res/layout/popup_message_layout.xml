<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="145dp"
    android:id="@+id/ll_root"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--ic_popup_bg-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/top_background"
        android:paddingBottom="@dimen/margin_5"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_creategroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:textColor="@color/color_FFFDF8"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:drawableLeft="@mipmap/chuangjian_icon"
            android:text="创建群聊" />
        <View
            android:layout_below="@+id/tv_creategroup"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="@dimen/margin_13"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/color_1EFFFFFF"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_joingroup"
            android:layout_below="@+id/tv_creategroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_13"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="@color/color_FFFDF8"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawableLeft="@mipmap/jiaruqun_icon"
            android:text="加入群聊" />

        <View
            android:id="@+id/line_searchusers"
            android:layout_below="@+id/tv_joingroup"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="@dimen/margin_13"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/color_1EFFFFFF"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_search_users"
            android:layout_below="@+id/tv_joingroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_13"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="@color/color_FFFDF8"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawableLeft="@mipmap/top_voicechat"
            android:text="搜索用户" />
    </RelativeLayout>

</LinearLayout>