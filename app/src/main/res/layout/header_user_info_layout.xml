    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_below="@+id/tv_nick"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_toRightOf="@+id/headView"
        android:layout_marginLeft="@dimen/margin_8"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/tv_signature"
        android:paddingBottom="16dp"/>
    <ImageView
        android:id="@+id/iv_isfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nick"
        android:layout_alignParentRight="true"
        android:src="@mipmap/usercenter_privatechat"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_my_images"
        android:layout_below="@+id/tv_signature"
        android:layout_width="match_parent"
        android:minHeight="66dp"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="6dp"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_tags"
        android:layout_below="@+id/rv_my_images"
        android:paddingLeft="16dp"
        android:minHeight="30dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/fl_add_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_tags"
        android:background="@drawable/shape_white_top_8r"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relayout_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_15">

            <LinearLayout
                android:id="@+id/ll_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignRight="@id/strut"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_F7AB00"
                    android:text="-"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/likeme"
                    android:textColor="@color/color_666666" />
            </LinearLayout>
            <View
                android:id= "@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/ll_follow_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_follow_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/color_F7AB00"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ilike"
                    android:textColor="@color/color_666666" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vistors_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_vistor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/color_F7AB00"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="шо┐хов"
                    android:textColor="@color/color_666666" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EFEFEF" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shape_white_top_8r"
        android:layout_below="@+id/rv_tags"/>
</RelativeLayout>