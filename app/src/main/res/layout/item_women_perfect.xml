<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/women_perfect_imageView"
        style="@style/DefaultImageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.25" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/women_perfect_headView"
        style="@style/DefaultCircleHeadStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/women_perfect_imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_women_perfect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/women_perfect_headView"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/women_perfect_headView"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="----"
        android:textColor="@color/textColor"
        android:textSize="@dimen/btnTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_women_perfect_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/women_perfect_headView"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/tv_women_perfect_name"
        android:background="@drawable/ic_sex_circle_bg_selector"
        android:drawableLeft="@drawable/sex_white_selector"
        android:gravity="center_vertical"
        android:drawablePadding="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:text="0" />

    <TextView
        android:id="@+id/tv_women_perfect_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/women_perfect_headView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/tv_women_perfect_age"
        android:drawablePadding="@dimen/margin_2"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_women_perfect_vistorfollownums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_women_perfect_name"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/women_perfect_headView"
        android:paddingRight="6dp"
        android:text="------"
        android:textColor="@color/color_888888"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_women_perfect_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/women_perfect_headView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="广州"
        android:textColor="@color/color_888888"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_women_perfect_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/women_perfect_headView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="@dimen/margin_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="---"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mydate_women_perfect_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_women_perfect_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:minHeight="30dp"
        android:paddingLeft="16dp" />

    <RelativeLayout
        android:id="@+id/rl_perfect_womenuserinfo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_orange_e6"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30"
            android:text="你的资料太少了,被人无情的跳过"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10"
            android:text="完善你的资料,可获得更多异性青睐哦"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_perfect_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@drawable/shape_20r_white"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_5"
            android:text="去完善"
            android:textColor="@color/color_F7AB00" />
    </RelativeLayout>
</RelativeLayout>