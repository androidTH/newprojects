<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/shape_white_5r"
            android:paddingBottom="@dimen/margin_15">

            <TextView
                android:id="@+id/tv_unknow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_35"
                android:text="匿名"
                android:textColor="@color/color_8F5A5A"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_unknow_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_unknow_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/ic_sex_bg_selector"
                    android:drawableLeft="@drawable/sex_white_selector"
                    android:drawablePadding="1dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="0.5dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="0.5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@mipmap/vip_gold"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/mojing"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_dialog_unknow_tags"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_below="@+id/ll_unknow_level"
                android:layout_marginLeft="@dimen/margin_35"
                android:layout_marginRight="@dimen/margin_35"
                android:layout_marginTop="@dimen/margin_15" />

            <TextView
                android:id="@+id/tv_dialogunknow_start"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rv_dialog_unknow_tags"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@drawable/shape_6r_8f"
                android:gravity="center"
                android:text="私聊"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/unknow_headview"
            style="@style/DefaultCircleNoHeadStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/nimingtouxiang_big"/>

    </RelativeLayout>
</LinearLayout>
