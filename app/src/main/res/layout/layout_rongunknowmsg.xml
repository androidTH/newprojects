<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/leftheader"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        app:RCCornerRadius="3dp"
        app:RCDefDrawable="@drawable/rc_default_portrait"
        app:RCShape="circle" />
    <TextView
        android:id="@+id/tv_leftunknowmsg"
        style="@style/RCTheme.TextView"
        android:layout_toRightOf="@+id/leftheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_5"
        android:textSize="16sp"
        android:gravity="center_vertical|left"
        android:textColorLink="#2972ab"
        android:maxWidth="235dp"
        android:paddingLeft="9dp"
        android:autoLink="all" />
    <TextView
        android:id="@+id/tv_rightunknowmsg"
        style="@style/RCTheme.TextView"
        android:layout_toLeftOf="@+id/rightheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_5"
        android:textSize="16sp"
        android:gravity="center_vertical|left"
        android:textColorLink="#2972ab"
        android:maxWidth="235dp"
        android:paddingLeft="9dp"
        android:autoLink="all" />
    <io.rong.imkit.widget.AsyncImageView
        android:id="@+id/rightheader"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        app:RCCornerRadius="3dp"
        app:RCDefDrawable="@drawable/rc_default_portrait"
        app:RCShape="circle" />
</RelativeLayout>