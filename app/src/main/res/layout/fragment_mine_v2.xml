<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.d6.android.app.widget.SwipeRefreshRecyclerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mSwipeRefreshLayout"/>
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_size"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/textColor"
            android:paddingRight="80dp"
            android:paddingLeft="80dp"
            android:id="@+id/tv_title_nick" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:drawableRight="@mipmap/ic_my_msg"
            android:id="@+id/tv_msg"
            android:layout_toLeftOf="@+id/tv_setting"
            android:layout_marginRight="4dp"
            android:paddingLeft="6dp"
            android:visibility="invisible"
            android:paddingRight="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:id="@+id/tv_setting"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:paddingBottom="8dp"
            android:drawableRight="@mipmap/ic_setting_white"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:id="@+id/tv_more"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableRight="@mipmap/ic_more_white"
            android:layout_alignParentRight="true"
            android:paddingLeft="6dp"
            android:visibility="gone"
            android:paddingRight="6dp"/>
    </RelativeLayout>
</RelativeLayout>