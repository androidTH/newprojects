<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_chat_women_card"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rc_ic_bubble_left"
    android:orientation="vertical"
    android:paddingLeft="9dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chat_imageView"
        style="@style/DefaultImageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.3" />

    <TextView
        android:id="@+id/tv_chat_indexofpics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/shape_14r_9900"
        android:paddingLeft="@dimen/margin_8"
        android:paddingTop="@dimen/margin_3"
        android:paddingRight="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_3"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chat_headView"
        style="@style/DefaultCircleHeadStyle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@+id/chat_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_headView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/chat_headView"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="111111"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_chat_womang_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chat_name"
        android:layout_toRightOf="@+id/chat_headView"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="8dp"
        android:background="@drawable/ic_sex_circle_bg_selector"
        android:drawableLeft="@drawable/sex_white_selector"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:paddingTop="0.5dp"
        android:paddingRight="3dp"
        android:paddingBottom="0.5dp"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_chat_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chat_name"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_toRightOf="@+id/tv_chat_womang_age"
        android:background="@drawable/shape_4r_orange"
        android:drawableLeft="@mipmap/memberorder_icon_white"
        android:drawablePadding="@dimen/margin_2"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="黄金会员"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_chat_vistorfollownums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chat_name"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/chat_headView"
        android:paddingRight="6dp"
        android:text="喜欢TA·69人"
        android:textColor="@color/color_888888"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_chat_city"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_headView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:gravity="right"
        android:text="广州"
        android:textColor="@color/color_888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_chat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_headView"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chat_content"
        android:paddingLeft="10dp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rv_chat_tags"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/color_EFEFEF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="@dimen/margin_5"
        android:drawableLeft="@mipmap/card_mingpian"
        android:drawablePadding="@dimen/margin_5"
        android:gravity="center_vertical"
        android:text="个人名片"
        android:textColor="@color/color_999999"
        android:textSize="11sp" />
</RelativeLayout>
