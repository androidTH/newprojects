<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/hongbao_pop_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20">
        <TextView
            android:id="@+id/tv_close_redwallet"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@mipmap/icon_redwallet_close"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_redwallet_headView"
            style="@style/DefaultCircleHeadStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/tv_redwallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_redwallet_headView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_3"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp" />

        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_redheart_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_redwallet_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"
            android:textColor="@color/color_FD9A8B"
            android:text=""
            android:gravity="center"
            android:textSize="15sp"
            app:imageSize="0dp"
            app:imageAlignment="center"/>

        <TextView
            android:id="@+id/tv_redwallet_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFA93C"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_below="@+id/tv_redheart_desc"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/margin_5"
            android:textSize="19sp"/>
        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_redwallet_status"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_5"
            android:gravity="center"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_redwallet_open"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:visibility="gone"
            android:src="@mipmap/icon_redwallet_open"/>

        <LinearLayout
            android:id="@+id/ll_redwallet_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_redheart_gobuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="查看领取详情"/>
            <TextView
                android:id="@+id/tv_redheart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/white"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>