<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tqicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@mipmap/vippage_tequan_sf" />
        <TextView
            android:id="@+id/tv_tqtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/shape_orange_2r_f7a"
            android:paddingLeft="@dimen/margin_6"
            android:paddingRight="@dimen/margin_6"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3"
            android:text="APP"
            android:textColor="@color/color_F7AB00"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tqname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="会员身份"
            android:textColor="@color/color_black"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/tv_tqdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:text="会员身份"
            android:textColor="@color/color_888888"
            android:lines="2"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>
