<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_16"
    android:paddingTop="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="30dp"
        style="@style/DefaultHeadStyle"
        android:id="@+id/headView"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tv_type"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:text="--"
        android:paddingLeft="4dp"
        android:layout_marginRight="-14dp"
        android:layout_alignRight="@+id/headView"
        android:paddingRight="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_6r_orange"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:layout_toRightOf="@+id/headView"
        android:textSize="@dimen/btnTextSize"
        android:id="@+id/tv_title"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:layout_marginBottom="6dp"
        android:drawableRight="@drawable/sex_selector"
        android:text="------"
        android:layout_alignTop="@+id/headView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_title"
        android:textSize="12sp"
        android:textColor="@color/textColor99"
        android:layout_marginLeft="4dp"
        android:id="@+id/tv_audio_auth"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:layout_alignBottom="@id/tv_title"
        android:drawableRight="@mipmap/ic_audio_auth"
        android:text="|"
        android:layout_alignTop="@+id/tv_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_deadline_time"
        android:layout_alignLeft="@id/tv_title"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_marginBottom="6dp"
        android:textColor="@color/color_369"
        android:text="----"
        android:layout_below="@+id/tv_title"/>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_deadline_time"
        android:layout_alignLeft="@id/tv_title"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_age"
            style="@style/textRedLineBgStyle"
            android:text="0"
            android:layout_marginRight="8dp" />
        <TextView
            android:id="@+id/tv_height"
            style="@style/textRedLineBgStyle"
            android:text="0CM"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/tv_weight"
            style="@style/textRedLineBgStyle"
            android:text="0KG"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------"
        android:layout_below="@+id/ll_info"
        android:layout_alignLeft="@id/tv_title"
        android:textSize="13sp"
        android:maxLines="2"
        android:textColor="@color/textColor99"
        android:id="@+id/tv_content"
        android:ellipsize="end"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:textColor="@color/textColor99"
        android:textSize="12sp"
        android:text="--"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/tv_content"/>
    <View style="@style/view_line_h"
        android:id="@+id/line"
        android:layout_below="@+id/tv_time"/>
</RelativeLayout>