<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:orientation="vertical">

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:id="@+id/imageView"-->
            <!--app:actualImageScaleType="fitCenter"-->
            <!--app:placeholderImageScaleType="fitCenter"-->
            <!--app:viewAspectRatio="1.3"/>-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/imageView"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10">
            <TextView
                android:id="@+id/tv_numberone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/shape_orange_oval"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="1"/>
           <TextView
               android:id="@+id/tv_wxnum"
               android:layout_toRightOf="@+id/tv_numberone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/color_333333"
               android:layout_marginLeft="@dimen/margin_20"
               android:layout_centerVertical="true"
               android:textStyle="bold"
               android:textSize="15sp"
               android:text=""/>

            <TextView
                android:id="@+id/tv_wxhintnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:visibility="invisible"
                android:text=""/>
            <TextView
                android:id="@+id/tv_wxcopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_20r_orange"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="复制"/>
        </RelativeLayout>
        <View style="@style/view_line_h" />
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_numbertwo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/shape_orange_oval"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="2"/>
            <TextView
                android:layout_toRightOf="@+id/tv_numbertwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="将此卡片分享给微信客服"/>
            <TextView
                android:id="@+id/tv_sharedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_20r_orange"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="分享"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/string_sharefriends_cancel"
        android:background="@color/color_F5F5F5"
        android:textColor="@color/color_666666"
        android:textStyle="bold"
        android:textSize="15sp" />
</LinearLayout>