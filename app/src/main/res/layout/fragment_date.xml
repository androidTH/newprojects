<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        android:background="@color/white"
        android:id="@+id/mTitleBar">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:gravity="center"
            android:maxLength="4"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:text="地区"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_type"
            android:text="类型"
            android:gravity="center"
            android:textStyle="bold"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:textColor="@color/textColor"
            android:layout_toRightOf="@+id/tv_city"
            android:textSize="@dimen/textSize"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textSize"
            android:layout_toLeftOf="@+id/headView"
            android:textColor="@color/textColor"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:id="@+id/tv_my_date"
            android:textStyle="bold"
            android:text="我的约会"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:id="@+id/headView"
            style="@style/DefaultCircleHeadStyle"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/mTitleBar"/>

    <ImageView
        android:id="@+id/tv_main_card_bg_im_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@mipmap/home_main_card_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_main_card_Bg_tv_id"
        android:layout_below="@+id/tv_main_card_bg_im_id"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_12"
        android:visibility="gone"
        android:text="暂时没有符合条件的人，等会再来看看吧"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/textSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tip"
        android:textSize="@dimen/textSize"
        android:textColor="@color/white"
        android:text="没有合适的人了。等一会再来看看吧"
        android:paddingTop="18dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:paddingRight="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-6dp"
        android:layout_below="@+id/mTitleBar"
        android:background="@drawable/ic_notice_blue_bg"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:id="@+id/ll_bottom"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_date_close"
            android:id="@+id/fb_unlike"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/btn_like"
            android:src="@mipmap/ic_date_choose"/>

    </LinearLayout>
</RelativeLayout>