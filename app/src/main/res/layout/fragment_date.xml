<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_homefindtop"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <View
            android:id="@+id/iv_middle"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/rl_bangdanpage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toLeftOf="@+id/iv_middle"
            android:paddingLeft="@dimen/margin_10"
            android:background="@drawable/shape_list_6r_4b">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center_vertical"
                android:text="榜单"
                android:textStyle="bold"
                android:textColor="@color/color_BFFFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_finddate03"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sv_finddate03"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/margin_3"
                    fresco:viewAspectRatio="1.0"
                    fresco:roundingBorderColor="@color/color_D8D8D8"
                    fresco:roundingBorderWidth="0.5dp"
                    fresco:roundAsCircle="true" />
                <com.d6zone.android.app.widget.textinlineimage.TextInlineImage
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_BFFFFFFF"
                    android:text="魅力榜·土豪榜"
                    android:id="@+id/tv_03"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_bangdan"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_groupchat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toRightOf="@+id/iv_middle"
            android:background="@drawable/shape_list_6r_a3"
            android:paddingLeft="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:gravity="center_vertical"
                android:text="群聊"
                android:textStyle="bold"
                android:textColor="@color/color_BFFFFFFF"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_finddate_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="优质私密群等你加入"
                android:textColor="@color/color_BFFFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_12"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_duihua"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mTitleBar"
        android:layout_below="@id/rl_homefindtop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="优质会员"/>
        <RelativeLayout
            android:id="@+id/bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_15">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:maxLength="10"
                android:text="地区"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_xingzuo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:maxLength="10"
                android:text="会员等级"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/string_age"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/bar_left"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_mycard"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="我的卡片"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_below="@+id/mTitleBar">

        <com.d6zone.android.app.widget.gallery.DiscreteScrollView
            android:id="@+id/mRecyclerView"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>

        <master.flame.danmaku.ui.widget.DanmakuView
            android:id="@+id/sv_danmaku"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/tv_main_card_bg_im_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/home_main_card_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_main_card_Bg_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_card_bg_im_id"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_12"
            android:text="暂时没有符合条件的人，等会再来看看吧"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/textSize"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@mipmap/find_loading_bg">
            <com.d6zone.android.app.widget.WaveView
                android:id="@+id/find_waveview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:wave_color="@color/color_F7AB00"
                app:wave_coreImageRadius="90"
                app:wave_width="90"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/loading_headView"
                style="@style/DefaultCircleHeadStyle"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:roundAsCircle="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_28"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/fb_liwu"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@mipmap/liwu_list_big" />
            <ImageButton
                android:id="@+id/fb_find_chat"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_25"
                android:background="@android:color/transparent"
                android:src="@mipmap/feed_comment_big_icon" />

            <ImageButton
                android:id="@+id/fb_heat_like"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@mipmap/feed_chatlike_normal_icon" />

        </LinearLayout>

        <com.d6zone.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_redheart_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom"
            android:layout_marginLeft="118dp"
            android:background="@mipmap/popwindow_bg"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_10"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <com.d6zone.android.app.widget.LoveHeart
        android:id="@+id/loveheart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>
    <LinearLayout
        android:id="@+id/ll_gift_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:orientation="vertical"/>
</RelativeLayout>