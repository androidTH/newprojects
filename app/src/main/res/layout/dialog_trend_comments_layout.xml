<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_CC000000"
    android:paddingBottom="@dimen/margin_10"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/commentCountView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="共0条评论"
        android:layout_marginBottom="12dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="12dp"
        android:id="@+id/tv_close"
        android:drawableRight="@mipmap/window_close_button"/>
    <com.d6.android.app.widget.SwipeRefreshRecyclerLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_below="@+id/commentCountView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_comment_circle_bg"
        android:paddingLeft="12dp"
        android:text="我来说两句"
        android:textColor="@color/color_66ffffff"
        android:textSize="@dimen/textSize"
        android:id="@+id/tv_trend_comment_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
</RelativeLayout>