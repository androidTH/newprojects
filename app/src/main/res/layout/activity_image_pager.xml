<?xml version="1.0" encoding="utf-8"?>
<com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_drag_relaivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/mImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/title_bar_size">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:drawableLeft="@mipmap/ic_close1"
           android:padding="12dp"
           android:id="@+id/tv_close"/>
       <TextView
           android:id="@+id/tv_pages"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="@dimen/textSize"
           android:textColor="@android:color/white"
           android:text="0/0"
           android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:padding="12dp"
           android:text="删除"
           android:visibility="gone"
           android:textColor="@color/white"
           android:textSize="@dimen/textSize"
           android:id="@+id/tv_delete"
           android:layout_alignParentRight="true"/>
   </RelativeLayout>
</com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout>
