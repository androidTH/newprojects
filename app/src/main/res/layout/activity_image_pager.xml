<?xml version="1.0" encoding="utf-8"?>
<com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_drag_relaivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/mImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_paypoints"
        android:layout_centerInParent="true"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="visible"
        android:background="@drawable/shape_10r_9900">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@mipmap/seepic_loveheart_big_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="打赏喜欢后可见"/>
        <TextView
            android:id="@+id/tv_paypoints"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingTop="@dimen/margin_6"
            android:paddingBottom="@dimen/margin_6"
            android:gravity="center"
            android:background="@drawable/shape_10r_orange"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="打赏"/>
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/title_bar_size"
       android:layout_marginTop="@dimen/margin_25">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:drawableLeft="@mipmap/full_close_button"
           android:padding="12dp"
           android:id="@+id/tv_close"/>
       <!--ic_close1-->
       <TextView
           android:id="@+id/tv_pages"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="@dimen/textSize"
           android:textColor="@android:color/white"
           android:text="0/0"
           android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:padding="12dp"
           android:text="删除"
           android:visibility="gone"
           android:textColor="@color/color_F7B500"
           android:textStyle="bold"
           android:textSize="15sp"
           android:id="@+id/tv_delete"
           android:layout_alignParentRight="true"/>
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tips"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_C9222222">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:textStyle="bold" />
    </RelativeLayout>
</com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout>
