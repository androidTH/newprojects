<?xml version="1.0" encoding="utf-8"?>
<com.d6.android.app.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_swipitem"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_itemType="main"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_main"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/headView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginBottom="12dp"
                style="@style/DefaultHeadStyle"
                app:roundedCornerRadius="26dp" />

            <ImageView
                android:id="@+id/iv_header_servicesign"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginTop="@dimen/height_40"
                android:src="@drawable/official_icon" />

            <com.d6.android.app.widget.DragPointView
                android:id="@+id/tv_unreadnum"
                android:layout_toRightOf="@+id/headView"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_13"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginLeft="-18dp"
                android:visibility="gone" />
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/tv_unread"
                android:background="@drawable/shape_4r_red"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:gravity="center"
                android:maxLength="2"
                android:visibility="gone"
                android:layout_alignTop="@+id/headView"
                android:layout_marginRight="-6dp"
                android:layout_alignRight="@id/headView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/headView"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/headView"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="@dimen/margin_35"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black"
                android:id="@+id/tv_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/color_777777"
                android:singleLine="true"
                android:id="@+id/tv_content"
                android:layout_toLeftOf="@+id/tv_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:layout_alignTop="@+id/headView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/color_999999"
                android:textSize="10sp"
                android:visibility="visible"
                android:text="15:12"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:background="@mipmap/ic_more_gray"/>
        </RelativeLayout>
        <View style="@style/view_line_h"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragme_delete"
        android:layout_width="wrap_content"
        app:layout_itemType="menu"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff5f83"
            android:gravity="center"
            android:textSize="@dimen/btnTextSize"
            android:textStyle="bold"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/white"
            android:text="删除"/>
    </FrameLayout>
</com.d6.android.app.widget.SwipeItemLayout>