<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_16"
        android:text="地区"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:singleLine="true"
        android:paddingLeft="@dimen/padding_16"
        android:text=""
        android:paddingRight="@dimen/padding_16"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
        android:gravity="center_vertical|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_16"
        android:text="会员等级"
        android:id="@+id/tv_level1"
        android:layout_below="@+id/tv_address"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:paddingLeft="@dimen/padding_16"
        android:layout_below="@+id/tv_address"
        android:paddingRight="@dimen/padding_16"
        android:singleLine="true"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
        android:text=""
        android:gravity="center_vertical|right" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/padding_16"
        android:text="觅约类型"
        android:id="@+id/tv_type1"
        android:visibility="gone"
        android:layout_below="@+id/tv_level"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:paddingLeft="@dimen/padding_16"
        android:layout_below="@+id/tv_level"
        android:singleLine="true"
        android:paddingRight="@dimen/padding_16"
        android:visibility="gone"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_chevron_right_gray_24dp"
        android:text=""
        android:gravity="center_vertical|right" />
    <View
        style="@style/view_line_h"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_alignBottom="@+id/tv_address"/>
    <View
        style="@style/view_line_h"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_alignBottom="@+id/tv_level"/>
    <View
        style="@style/view_line_h"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_alignBottom="@+id/tv_type"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_6r_orange"
        android:textColor="@color/white"
        android:textSize="@dimen/btnTextSize"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="确认"
        android:id="@+id/btn_sure"
        android:gravity="center"/>
</RelativeLayout>
