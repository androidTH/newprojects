<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/headView"
                style="@style/DefaultHeadStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headView"
                android:layout_marginBottom="4dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/sex_selector"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text="--" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="--"
                android:textColor="@color/textColor99"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headView"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_vip"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="年龄" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="身高" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="体重" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="职业" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:id="@+id/tv_age"
                        android:text="00"
                        android:textColor="@color/color_369" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/textColor99" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:id="@+id/tv_height"
                        android:text="00"
                        android:textColor="@color/color_369" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/textColor99" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:id="@+id/tv_weight"
                        android:text="00"
                        android:textColor="@color/color_369" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/textColor99" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLength="6"
                        android:text="--"
                        android:id="@+id/tv_job"
                        android:textColor="@color/color_369" />
                </LinearLayout>

                <View
                    style="@style/view_line_h"
                    android:layout_alignBottom="@+id/ll1"
                    android:layout_marginLeft="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16" />

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_line_366_4r"
                        android:padding="6dp"
                        android:text="城市"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_4r_cee"
                        android:text="--"
                        android:padding="6dp"
                        android:textColor="#33774a"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll2"
                    android:paddingBottom="24dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_line_366_4r"
                        android:padding="6dp"
                        android:text="兴趣爱好"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_hobbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_4r_b5b"
                        android:text="--"
                        android:padding="6dp"
                        android:textColor="#29439b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll3"
                    android:paddingBottom="24dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_line_366_4r"
                        android:padding="6dp"
                        android:text="星座"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_constellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:background="@drawable/shape_4r_f5b"
                        android:text="--"
                        android:textColor="#ae2710"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll4"
                    android:paddingBottom="24dp"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16"
                    android:paddingTop="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/shape_line_366_4r"
                        android:padding="6dp"
                        android:layout_alignParentTop="true"
                        android:text="自我介绍"
                        android:id="@+id/tv5"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv5"
                        android:background="@drawable/shape_4r_fee"
                        android:padding="6dp"
                        android:text="--"
                        android:textColor="#c2a14c"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_chat"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_6r_orange">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/ic_chat_white"
            android:textSize="@dimen/btnTextSize"
            android:layout_gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="私聊TA"/>
    </FrameLayout>
</RelativeLayout>