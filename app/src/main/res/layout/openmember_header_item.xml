<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_membership_viptq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rl_membership_vipfw"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_membership_viptq"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_ztnums"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="有限期: 可选"
            android:textColor="@color/color_666666"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="center_vertical"
            android:text="服务范围: 全球"
            android:textColor="@color/color_666666"
            android:textSize="10sp" />
    </LinearLayout>
    <View
        android:id="@+id/view_line_openmember"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_below="@+id/rl_membership_vipfw"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/color_F5F5F5" />
</RelativeLayout>
