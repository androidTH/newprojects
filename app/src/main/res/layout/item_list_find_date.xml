<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="8dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            style="@style/DefaultImageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            app:roundBottomLeft="false"
            app:roundBottomRight="false"
            app:roundedCornerRadius="6dp"
            app:viewAspectRatio="1.1666" />
        <TextView
            android:id="@+id/tv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll"
            android:layout_marginRight="4dp"
            android:drawableLeft="@mipmap/ic_user_no"
            android:paddingLeft="@dimen/padding_16"
            android:layout_alignBottom="@+id/ll"
            android:gravity="center_vertical" />
       <LinearLayout
           android:id="@+id/ll"
           android:layout_width="wrap_content"
           android:layout_toRightOf="@+id/tv_img"
           android:layout_below="@+id/imageView"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="--"
               android:id="@+id/tv_vip"
               android:background="@drawable/shape_orange_rounded"
               android:paddingLeft="6dp"
               android:layout_marginRight="8dp"
               android:layout_marginBottom="6dp"
               android:paddingRight="6dp"
               android:textSize="12sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:id="@+id/tv_name"
               android:text="--"
               android:maxLines="1"
               android:paddingRight="12dp"
               android:drawablePadding="6dp"
               android:gravity="center_vertical"
               android:textColor="@color/color_333333"
               android:drawableRight="@drawable/sex_selector"/>
       </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_16"
            android:id="@+id/tv_info"
            android:textSize="12sp"
            android:text="28|180CM|80KG"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_888888"
            android:layout_below="@+id/ll"/>
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="12sp"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/padding_16"
            android:singleLine="true"
            android:layout_below="@+id/tv_info"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:paddingRight="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:paddingLeft="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16"
            android:layout_below="@+id/tv_city"
            android:id="@+id/tv_content"
            android:textSize="12sp"
            android:textColor="@color/color_888888"
            android:text="---"
            android:maxLines="2"
            android:ellipsize="end"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>