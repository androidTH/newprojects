<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_CC000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40">
        <TextView
            android:id="@+id/edit_img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_F7AB00"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:text="完成"
            android:id="@+id/edit_img_success"/>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/beautiflyimageview"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_sticker"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingBottom="3dip"
            android:layout_alignParentBottom="true"
            android:overScrollMode="never"
            android:background="@color/color_CC000000"
            android:scrollbars="none"
            android:paddingTop="3dip"/>
    </RelativeLayout>
</LinearLayout>