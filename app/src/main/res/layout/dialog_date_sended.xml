<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_8r"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="16dp">

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/DefaultImageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headView"
            app:viewAspectRatio="1" />
        <TextView
            android:id="@+id/tv_date_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="我的约会"
            android:textSize="@dimen/btnTextSize"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="15dp"
            android:id="@+id/tv_my_date"
            android:paddingBottom="15dp"
            android:background="@drawable/shape_4r_orange"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_close_orange2"/>
</RelativeLayout>