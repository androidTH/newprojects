<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv"
        android:layout_marginBottom="-8dp"
        android:background="#dedede"
        android:id="@+id/iv_bg"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#33000000"
        android:layout_marginBottom="-8dp"
        android:layout_above="@+id/tv"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/DefaultCircleHeadStyle"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:id="@+id/headView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/headView"
        android:layout_toRightOf="@+id/headView"
        android:textSize="@dimen/textSize"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:maxWidth="88dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"
        android:id="@+id/tv_nick"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/tv_nick"
        android:layout_alignTop="@+id/tv_nick"
        android:background="@drawable/ic_sex_bg_selector"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/sex_white_selector"
        android:textSize="12dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:id="@+id/tv_sex"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_sex"
        android:layout_alignTop="@+id/tv_nick"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="invisible"
        android:id="@+id/tv_vip"
        android:text="--"
        android:background="@drawable/shape_4r_orange"/>

</RelativeLayout>
