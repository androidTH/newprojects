<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ns_member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/height_75">

        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/vippage_title_bg" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/vipheaderview"
            style="@style/DefaultCircleHeadStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_65" />

        <TextView
            android:id="@+id/tv_viplevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vipheaderview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_vipendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_viplevel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/color_CCFFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_viptq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vipendtime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_3"
            android:text=""
            android:textColor="@color/color_CCFFFFFF"
            android:textSize="11sp" />
        <LinearLayout
            android:id="@+id/ll_member_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_viptq"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/shape_10r_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_15">

            <RelativeLayout
                android:id="@+id/ll_kf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vipfk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@drawable/shape_noradius_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="人工客服"
                    android:textColor="@color/color_black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_6"
                android:text="联系专属微信客服即可享受以下服务"
                android:textColor="@color/color_888888"
                android:textSize="12sp" />
            <!--android:background="@drawable/shape_15r_7e"-->

            <TextView
                android:id="@+id/tv_wechat_kf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@mipmap/wechat_buttonkf"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_5"
                android:paddingRight="@dimen/margin_8"
                android:paddingBottom="@dimen/margin_5"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@color/color_EFEFEF" />

            <TextView
                android:id="@+id/tv_data_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@color/color_EFEFEF" />

            <TextView
                android:id="@+id/tv_mem_memberztnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="18dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_men_memberdesc"
                android:paddingTop="@dimen/margin_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_line02"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:visibility="gone"
                android:background="@color/color_EFEFEF" />

            <TextView
                android:id="@+id/tv_men_member_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_13"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_15"
                android:visibility="gone"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hy_tq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_member_rg"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/shape_10r_white"
            android:orientation="vertical">
            <!--android:paddingBottom="@dimen/margin_20"-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_member_tq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lianxikf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_hy_tq"
            android:layout_marginTop="@dimen/margin_22"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系专属微信客服即可享受特权中的微信人工服务 "
                android:textColor="@color/color_CCFFFFFF"
                android:layout_marginBottom="@dimen/margin_5"
                android:textSize="12sp" />

            <!--android:background="@drawable/shape_orange_4r"-->
            <TextView
                android:id="@+id/tv_wechat_zskf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:text="专属微信客服"
                android:textColor="@color/color_F7AB00"
                android:paddingTop="@dimen/margin_2"
                android:background="@drawable/shape_white_5r"
                android:paddingBottom="@dimen/margin_2"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
