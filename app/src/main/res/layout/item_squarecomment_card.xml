<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_chat_comment_card"
    android:layout_width="@dimen/width_210"
    android:layout_height="wrap_content"
    android:background="@drawable/rc_ic_bubble_left"
    android:orientation="vertical"
    android:paddingLeft="9dp">

    <TextView
        android:id="@+id/tv_chat_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginBottom="6dp"
        android:textColor="@color/color_black"
        android:singleLine="true"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rl_chat_commentcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chat_comment_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="--"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/rl_pics"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <!--chat_sound-->
            <!--chat_voice-->

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/chat_sound" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/chat_comment_imageView"
                style="@style/DefaultImageStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:roundTopStart="true"
                app:roundTopEnd="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundBottomStart="true"
                app:roundBottomEnd="true"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundAsCircle="false"
                app:roundedCornerRadius="@dimen/margin_3"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"/>

            <ImageView
                android:id="@+id/iv_smapllplay"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/feed_smallplay_icon"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
