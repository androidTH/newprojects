<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/rl_systemmsg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_chattitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/noticesys_sysinfo"
            android:drawablePadding="@dimen/margin_5"
            android:text="系统消息"
            android:textColor="@color/color_black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />
    </RelativeLayout>
    <com.d6.android.app.widget.SwipeRefreshRecyclerLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_below="@+id/rl_systemmsg_toolbar"
        android:background="@color/color_EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>