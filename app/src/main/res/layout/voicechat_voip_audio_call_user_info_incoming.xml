<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_icoming_backgroud"
        android:layout_width="match_parent"
        android:visibility="gone"
        style="@style/uerInfoaddImageStyle"
        android:layout_height="match_parent" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_icoming_backgroud"-->
        <!--android:layout_width="match_parent"-->
        <!--android:visibility="gone"-->
        <!--android:layout_height="match_parent" />-->

    <ImageView
        android:id="@+id/iv_large_preview_Mask"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:background="@color/color_4D000000"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_40"
        android:src="@mipmap/yinyong"/>


    <!--android:background="@color/callkit_color_90mask"-->

    <ImageView
        android:id="@+id/voice_voip_call_minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onMinimizeClick"
        android:visibility="gone"
        android:src="@drawable/rc_voip_minimize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_below="@+id/voice_voip_call_minimize">

        <TextView
            android:id="@+id/tv_localusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_voicechat_desc"
            android:layout_below="@+id/tv_localusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_8"
            android:textColor="@color/color_4DFFFFFF"
            android:textSize="14sp"/>

        <!--android:layout_alignParentTop="true"
                    app:RCCornerRadius="@dimen/asynimg_cornerRadius8dp"
-->
        <!--<io.rong.imkit.widget.AsyncImageView-->
            <!--android:id="@+id/voice_voip_user_portrait"-->
            <!--android:layout_below="@+id/tv_voicechat_desc"-->
            <!--android:layout_width="@dimen/userhead90dp"-->
            <!--android:layout_height="@dimen/userhead90dp"-->
            <!--android:layout_marginTop="@dimen/height_50"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--app:RCShape="circle"-->
            <!--android:background="@android:color/transparent"-->
            <!--app:RCDefDrawable="@drawable/rc_default_portrait" />-->

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/voice_voip_user_portrait"
            android:layout_below="@+id/tv_voicechat_desc"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/height_50"
            android:layout_centerHorizontal="true"
            app:roundingBorderWidth="3dp"
            app:roundingBorderColor="@color/white"
            app:failureImageScaleType="centerCrop"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/rc_default_portrait"
            app:roundedCornerRadius="60dp" />

        <!--@dimen/userNameMarginTop13dp-->
        <TextView
            android:id="@+id/voice_voip_user_name"
            style="@style/callkit_voip_text_style_18spWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voice_voip_user_portrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_13"
            android:textStyle="bold"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/ib_voicechat_loveheart"
            android:layout_below="@id/voice_voip_user_name"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:src="@mipmap/center_like_button" />
        <!--
        android:textColor="#66FFFFFF"
        android:layout_below="@+id/voice_voip_user_name"
        android:layout_marginTop="12dp"
        -->
        <TextView
            android:id="@+id/tv_setupTime"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <!--记录rc_voip_call_remind_info
        单人视频.被叫  单人语音.主叫\被叫
        android:layout_marginTop="56.5dp"
        android:layout_below="@+id/voice_voip_user_name"
        -->
        <TextView
            android:id="@+id/voice_voip_call_remind_info"
            style="@style/callkit_voip_text_style_18spWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/rc_voip_call_waiting" />
        <!--单人视频——被叫-->
    </RelativeLayout>
</RelativeLayout>
