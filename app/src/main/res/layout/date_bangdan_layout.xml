<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/rankinglist_bg"/>
    <include layout="@layout/header_bangdan_order"
        android:id="@+id/rl_toptofhree"/>
   <android.support.v7.widget.RecyclerView
       android:id="@+id/rv_date_bangdanlist"
       android:layout_below="@+id/rl_toptofhree"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/shape_gradient_ff"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_date_find_bangdan"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_26"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_20r_orange"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="查看榜单"/>
    </RelativeLayout>
</RelativeLayout>