<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back"
            android:paddingLeft="@dimen/padding_16" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="查看特权"
            android:textColor="@color/color_black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EAEAEA" />

    <!--<TextView-->
        <!--android:id="@+id/tv_title0"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginTop="@dimen/margin_10"-->
        <!--android:text="获得积分规则"-->
        <!--android:textSize="16sp"-->
        <!--android:textStyle="bold" />-->

    <!--<TextView-->
        <!--android:id="@+id/tv_title1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="@dimen/margin_10"-->
        <!--android:text="使用积分规则"-->
        <!--android:textSize="16sp"-->
        <!--android:textStyle="bold" />-->
    <WebView
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10">
        <TextView
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_6r_orange"
            android:gravity="center"
            android:text="联系微信客服认证"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_15" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/btn_sign_out"
           android:layout_marginTop="@dimen/margin_15"
           android:gravity="center_horizontal"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_wechat_number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="客服微信号："
               android:textColor="@color/color_888888"
               android:layout_marginRight="@dimen/margin_15"
               android:textSize="12sp" />

           <TextView
               android:id="@+id/tv_copy_wechat"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_15"
               android:text="点击复制"
               android:textColor="@color/color_F7AB00"
               android:textSize="12sp" />
       </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
