<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/DefaultImageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_12"
            android:id="@+id/imageView"
            app:viewAspectRatio="2.058" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginRight="@dimen/padding_12"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12">

                <TextView
                    android:id="@+id/iv"
                    android:layout_width="50dp"
                    android:layout_marginRight="8dp"
                    android:drawableTop="@mipmap/ic_bc_1"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv"
                    android:drawablePadding="4dp"
                    android:id="@+id/tv_1"
                    android:drawableBottom="@drawable/shape_yellow_horizontal_16dp_bg"
                    android:text="收购合作"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="为促进平台更快发展，现收购各种类型平台，欢迎有资源的平台负责人前来洽谈"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_alignLeft="@+id/tv_1"
                    android:textColor="@color/textColor99"
                    android:layout_below="@+id/tv_1"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="@dimen/padding_12"
            android:layout_marginLeft="@dimen/padding_12"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12">

                <TextView
                    android:id="@+id/iv2"
                    android:layout_width="50dp"
                    android:drawableTop="@mipmap/ic_bc_2"
                    android:layout_marginRight="8dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv2"
                    android:drawablePadding="4dp"
                    android:id="@+id/tv_2"
                    android:drawableBottom="@drawable/shape_yellow_horizontal_16dp_bg"
                    android:text="互推合作"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="欢迎各媒体平台前来商谈互推适事宜"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_alignLeft="@+id/tv_2"
                    android:textColor="@color/textColor99"
                    android:layout_below="@+id/tv_2"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginRight="@dimen/padding_12"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12">

                <TextView
                    android:id="@+id/iv3"
                    android:layout_width="50dp"
                    android:drawableTop="@mipmap/ic_bc_3"
                    android:layout_marginRight="8dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv3"
                    android:drawablePadding="8dp"
                    android:id="@+id/tv_3"
                    android:drawableBottom="@drawable/shape_yellow_horizontal_16dp_bg"
                    android:text="广告合作"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="欢迎各品牌网站代理及网络联盟洽谈广告推广合作"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_alignLeft="@+id/tv_3"
                    android:textColor="@color/textColor99"
                    android:layout_below="@+id/tv_3"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/padding_12"
            android:layout_marginRight="@dimen/padding_12"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12">

                <TextView
                    android:id="@+id/iv4"
                    android:drawableTop="@mipmap/ic_bc_4"
                    android:layout_width="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv4"
                    android:drawablePadding="8dp"
                    android:id="@+id/tv_4"
                    android:drawableBottom="@drawable/shape_yellow_horizontal_16dp_bg"
                    android:text="其他合作"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="欢迎有其他合作意向的前来洽谈合作事宜"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_alignLeft="@+id/tv_4"
                    android:textColor="@color/textColor99"
                    android:layout_below="@+id/tv_4"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:drawableTop="@mipmap/ic_qr_code"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="扫码联系平台主"/>

    </LinearLayout>
</ScrollView>