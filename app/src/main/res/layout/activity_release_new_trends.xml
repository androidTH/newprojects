<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/title_bar_size">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/back"
            android:paddingLeft="@dimen/padding_16"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发布动态"
            android:textColor="@color/textColor"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_release"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/orange_f6a"
            android:text="发送" />
    </RelativeLayout>
    <View style="@style/view_line_h"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:id="@+id/et_content"
                android:background="@color/white"
                android:gravity="top"
                android:maxLength="1000"
                style="@style/editStyle"
                android:padding="@dimen/padding_16"
                android:textColorHint="#7e786b"
                android:hint="来吧，分享点什么..."/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@mipmap/ic_location"
                    android:id="@+id/tv_address1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@mipmap/ic_add1"
                    android:hint="添加位置"
                    android:textColor="@color/orange_f6a"
                    android:id="@+id/tv_address"/>
            </LinearLayout>
            <View style="@style/view_line_h"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_16"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:hint="严禁传播淫秽色情等不良信息违者封号！"
                android:layout_marginBottom="60dp"
                android:drawableLeft="@mipmap/ic_warning"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
