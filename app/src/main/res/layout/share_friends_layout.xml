<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_share_friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:layout_marginBottom="@dimen/margin_3"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/margin_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_wallet_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginBottom="@dimen/margin_15">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_invitationfriends_headView"
                style="@style/DefaultCircleHeadStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_3"/>

            <com.d6.android.app.widget.CircleImageView
                android:id="@+id/iv_invitationfriends_circleheadView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_3"/>

            <TextView
                android:id="@+id/tv_invitationfriends_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/iv_invitationfriends_headView"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_invitationfriends_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@+id/tv_invitationfriends_username"
                android:text="为你推荐"
                android:textColor="@color/color_888888"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_invitationfriends_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_toRightOf="@+id/iv_invitationfriends_headView"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15">

            <ImageView
                android:id="@+id/iv_invitationfriends_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/iv_invitationfriends_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invitationfriends_appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D6社区"
                    android:textColor="@color/color_black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_invitationfriends_app_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_invitationfriends_icon"
                    android:text="高端私人定制交友"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_invitationfriends_qcode"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/share_pic_tese" />
    </LinearLayout>
</android.support.v7.widget.CardView>