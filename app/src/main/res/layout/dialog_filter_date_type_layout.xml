<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/title_bar_size"
        android:background="@color/l_transparent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/popup_bg2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="全部\n全部约会类型"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/line_all"
                style="@style/ImageView_h" />

            <TextView
                android:id="@+id/tv_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:visibility="visible"
                android:text="官方推荐\nD6社区的推荐"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <ImageView style="@style/ImageView_h"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="征求\n在旅行中遇见最美的你"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp"/>

            <ImageView style="@style/ImageView_h" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="救火\n在旅行中遇见最美的你"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <ImageView style="@style/ImageView_h" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="急约\n快速响应的约会"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <ImageView style="@style/ImageView_h" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="旅行约\n一起来旅行吧"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <ImageView style="@style/ImageView_h" />
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="旅行约\n一起来旅行吧"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <ImageView style="@style/ImageView_h" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="旅行约\n一起来旅行吧"
                android:textColor="@color/textColor"
                android:lineSpacingExtra="4dp"
                android:textSize="12sp" />

            <!--<ImageView style="@style/ImageView_h"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="#f8f7f6"/>-->
        </LinearLayout>

    </FrameLayout>
    <View android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/l_transparent"
        android:id="@+id/bgView"/>
</LinearLayout>