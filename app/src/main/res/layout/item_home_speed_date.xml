<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/shape_date_white"
    android:padding="@dimen/margin_10">

    <RelativeLayout
        android:id="@+id/rl_datecontent"
        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp" />
<!--android:background="@drawable/shape_4r_56"-->
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_4r_orange"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="3dp"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="3dp"
            android:text="救火"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_auth_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape_10r_8e"
            android:drawableLeft="@mipmap/small_authentication"
            android:drawablePadding="@dimen/margin_2"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_2"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_2"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_auth_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape_10r_8e"
            android:layout_marginRight="@dimen/margin_5"
            android:drawablePadding="@dimen/margin_1"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_2"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_2"
            android:text="黄金会员"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/sex_selector"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/color_333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:gravity="center_vertical"
            android:text="28 180CM 80KG"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_info"
            android:gravity="center_vertical"
            android:text="-----"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_address"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="----"
            android:maxLines="1"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_horzmore"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/animator_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"
            android:gravity="center"
            android:text="继续滑动进入更多"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>