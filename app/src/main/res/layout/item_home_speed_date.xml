<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            style="@style/DefaultHeadStyle"
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_type"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="救火"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:layout_alignRight="@+id/imageView"
            android:paddingRight="2dp"
            android:layout_alignTop="@+id/imageView"
            android:gravity="center_vertical"
            android:background="#cc562BFF"/>
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginRight="62dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:singleLine="true"
                android:drawableRight="@drawable/sex_selector"
                android:gravity="center_vertical"
                android:text="--"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textColor99"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_audio_auth"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/ic_audio_auth"
                android:text="|"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_above="@+id/tv_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_booking"
            android:text="28|180CM|80KG"
            android:layout_alignLeft="@+id/ll_name"
            android:textColor="@color/textColor66"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignLeft="@+id/ll_name"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_booking"
            android:text="----"
            android:textColor="@color/textColor99"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/tv_booking"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_4r_orange_line"
            android:textColor="@color/orange_f6a"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:text="报名"/>
    </RelativeLayout>
    <View style="@style/view_line_h"
        android:layout_marginLeft="12dp"
        android:id="@+id/line"
        android:layout_marginRight="12dp"
        android:layout_gravity="bottom"/>
</FrameLayout>