<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F6F7FA"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:drawableRight="@mipmap/redheart_small"
            android:drawablePadding="@dimen/margin_6"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="累计收到"/>
        <TextView
            android:id="@+id/tv_receivedliked_nums"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_6"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_receiveliked_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_25"
        android:textColor="@color/color_888888"
        android:paddingLeft="@dimen/margin_10"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:textStyle="bold"
        android:text="最近收到的喜欢"/>
     <android.support.v7.widget.RecyclerView
         android:id="@+id/rv_receivedliked"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_25"
        android:textColor="@color/color_888888"
        android:paddingLeft="@dimen/margin_10"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:textStyle="bold"
        android:text="收到的喜欢排名"/>
</LinearLayout>
