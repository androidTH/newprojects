    <RelativeLayout
        android:id="@+id/rl_checkversion"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_version"
            style="@style/mineTextStyle"
            android:text="当前版本" />
        <TextView
            android:id="@+id/tv_versionname"
