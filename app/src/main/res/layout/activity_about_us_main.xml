    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_privacy"
        style="@style/mineTextStyle"
        android:text="隐私政策"/>
    <ImageView style="@style/ImageView_h"/>
    <TextView
        android:id="@+id/tv_userxieyi"
