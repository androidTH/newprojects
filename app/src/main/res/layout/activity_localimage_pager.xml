<?xml version="1.0" encoding="utf-8"?>
<com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_drag_relaivelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/mImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/title_bar_size"
       android:layout_marginTop="@dimen/margin_25">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:drawableLeft="@mipmap/back"
           android:padding="12dp"
           android:id="@+id/tv_close"/>
       <!--ic_close1-->
       <TextView
           android:id="@+id/tv_pages"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="@dimen/textSize"
           android:textColor="@color/color_F7B500"
           android:text="0/0"
           android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:padding="12dp"
           android:text="删除"
           android:textColor="@color/color_F7B500"
           android:textStyle="bold"
           android:textSize="15sp"
           android:id="@+id/tv_delete"
           android:layout_alignParentRight="true"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:padding="12dp"
           android:textColor="@color/color_F7B500"
           android:textStyle="bold"
           android:textSize="15sp"
           android:id="@+id/tv_check"
           android:layout_alignParentRight="true"/>
       <!--editpic_selete-->
       <!--android:drawableLeft="@mipmap/editpic_seleted"-->
   </RelativeLayout>
   <RelativeLayout
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:gravity="center_vertical"
       android:background="@color/color_C9222222"
       android:layout_height="60dp">
      <TextView
          android:id="@+id/tv_edittiezhi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:drawableLeft="@mipmap/edit_tiezi"
          android:layout_marginLeft="@dimen/margin_20"
          android:drawablePadding="@dimen/margin_5"
          android:textSize="15sp"
          android:text="贴纸/打码"/>

       <TextView
           android:id="@+id/tv_dowork"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/color_F7B500"
           android:layout_alignParentRight="true"
           android:textStyle="bold"
           android:layout_marginRight="@dimen/margin_20"
           android:textSize="15sp"
           android:text="完成·"/>
   </RelativeLayout>
</com.d6.android.app.widget.photodrag.PhotoDragRelativeLayout>
