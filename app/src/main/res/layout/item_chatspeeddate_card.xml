<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_chat_speed_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bubble_date_right"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/chat_speeddate_imageView"
            style="@style/DefaultImageStyle"
            app:viewAspectRatio="1"
            android:layout_width="230dp"
            android:layout_height="230dp"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_chat_speeddate_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginTop="@dimen/margin_5"-->
            <!--android:background="@drawable/shape_4r_orange"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingLeft="@dimen/margin_5"-->
            <!--android:paddingTop="3dp"-->
            <!--android:paddingRight="@dimen/margin_5"-->
            <!--android:paddingBottom="3dp"-->
            <!--android:text="救火"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="10sp" />-->

        <TextView
            android:id="@+id/tv_chat_speeddate_authstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="205dp"
            android:layout_marginRight="@dimen/margin_5"
            android:drawablePadding="@dimen/margin_2"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_2"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_2"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_chat_speeddate_authlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="205dp"
            android:layout_marginRight="@dimen/margin_5"
            android:drawablePadding="@dimen/margin_2"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_2"
            android:paddingRight="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_2"
            android:text="黄金会员"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_chat_speeddate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:drawableRight="@drawable/sex_selector"
        android:drawablePadding="6dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/width_210"
        android:singleLine="true"
        android:text="--"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_chat_speeddate_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_chat_speeddate_name"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_marginBottom="@dimen/margin_5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="28·180CM·80KG"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:textColor="@color/color_888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_chat_speeddate_content"
        android:layout_width="@dimen/width_210"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="28·180CM·80KG"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_chat_speeddate_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:drawableLeft="@mipmap/date_area_icon"
        android:drawablePadding="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:text="-----"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_chat_speeddate_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/shape_4r_left_right_orange"
        android:drawableLeft="@mipmap/card_white_gf_icon"
        android:drawablePadding="@dimen/margin_5"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:text="急约"
        android:textColor="@color/white"
        android:textSize="11sp" />
</LinearLayout>
