<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="优质男女互动社区"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_type"
            android:text="+86"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_expand_more_24dp"
            android:textColor="@color/textColor"/>
        <View android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/dividing_line_color"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_phone"
            style="@style/phoneStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:padding="@dimen/padding_16"
            android:background="@null"/>
    </LinearLayout>
    <View style="@style/view_line_h"
        android:id="@+id/phoneLine"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone_error"
        android:visibility="invisible"
        android:text="请输入正确的手机号格式"
        android:textColor="@color/red_fc3"
        android:textSize="12dp"
        android:paddingTop="5dp"
        android:paddingLeft="56dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_code"
            android:maxLength="6"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="@dimen/padding_16"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:id="@+id/tv_get_code"
            android:paddingTop="4dp"
            android:enabled="false"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/circle_gray_bg"
            android:layout_alignRight="@+id/et_code"
            android:textColor="@color/white"
            android:text="获取验证码"/>
    </RelativeLayout>
    <View style="@style/view_line_h"
        android:id="@+id/codeLine"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_code_error"
        android:visibility="invisible"
        android:text="请输入验证码"
        android:textColor="@color/red_fc3"
        android:textSize="12dp"
        android:paddingTop="5dp"
        android:paddingLeft="56dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:visibility="gone"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:textColor="#336699"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_12"
            android:id="@+id/tv_contact"
            android:text="或联系客服"
            android:paddingTop="@dimen/padding_16"
            android:paddingBottom="@dimen/padding_16"
            android:textColor="#336699"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="注册/登录"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/iv2"
        android:textSize="@dimen/btnTextSize"
        android:layout_marginTop="40dp"
        android:enabled="false"
        android:background="@drawable/shape_orange_circle_selector"/>

    <TextView
        android:id="@+id/action_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="注册帐户"
        android:visibility="gone"
        android:textColor="#bbbbbb"/>
    <TextView
        android:id="@+id/action_protocols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"
        android:text="注册即表示同意D6社区《用户协议》"
        android:textColor="#bbbbbb"/>
    <View android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content">
        <View
            style="@style/view_line_h"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize"
            android:textColor="@color/textColor99"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="微信登录"/>
        <View
            style="@style/view_line_h"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_wechat_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:drawableTop="@mipmap/ic_wx"/>
</LinearLayout>
