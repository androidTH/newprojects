<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/filter_squretitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/tag_list_icon"
            android:drawablePadding="@dimen/margin_5"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:text=""/>
        <TextView
            android:id="@+id/add_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            android:drawableLeft="@mipmap/ic_add_orange"/>
    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/rl_topicinfo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white">
       <TextView
           android:id="@+id/tv_topic_desc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_marginTop="@dimen/margin_15"
           android:layout_marginBottom="@dimen/margin_15"
           android:layout_marginRight="@dimen/margin_20"
           android:layout_marginLeft="@dimen/margin_20"
           android:textColor="@color/color_333333"
           android:textSize="14sp"
           android:gravity="center"/>
   </RelativeLayout>

    <com.d6.android.app.widget.SwipeRefreshRecyclerLayout
        android:id="@+id/swipeRefreshLayout_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/rl_friends_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_filtersquare_emptypic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/squre_empty_bg" />
        <TextView
            android:id="@+id/tv_filtersquare_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_below="@+id/iv_filtersquare_emptypic"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/margin_5"
            android:padding="@dimen/padding_12"
            android:text="你还没有喜欢的TA\n喜欢后TA的动态将会出现在这里"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/textSize"/>
    </RelativeLayout>
</LinearLayout>
