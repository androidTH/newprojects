<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_white_8r"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center"
            android:text="请输入申请理由"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_content"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/shape_3r_ef"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="top"
            android:hint="输入申请理由（选填）"
            android:textSize="15sp"
            android:maxLength="20"
            android:padding="@dimen/padding_16"
            android:textColorHint="@color/color_888888" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DFE1E5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_joingroup_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/string_cancel"
                android:textStyle="bold"
                android:textColor="@color/color_666666"
                android:textSize="17sp" />

            <View
                android:id="@+id/view_02"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_DFE1E5" />

            <TextView
                android:id="@+id/tv_joingroup_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="申请加入"
                android:textColor="@color/color_F7AB00"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>