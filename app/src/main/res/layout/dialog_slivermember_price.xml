<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/margin_20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_65">

        <TextView
            android:id="@+id/tv_slive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_silverMembership_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:src="@mipmap/icon_close_orange" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DBDBDB"/>
    <TextView
        android:id="@+id/tv_slivermember_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/color_888888"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="人工服务约会地区"/>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/height_60"
         android:layout_marginTop="@dimen/margin_20"
         android:layout_marginLeft="@dimen/margin_20"
         android:layout_marginRight="@dimen/margin_20"
         android:background="@drawable/shape_4r_f7">
         <TextView
             android:id="@+id/tv_rg_city"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="15sp"
             android:textColor="@color/color_black"
             android:textStyle="bold"
             android:layout_marginTop="@dimen/margin_10"
             android:layout_marginLeft="@dimen/margin_15"
             android:text="选择人工服务约会地区"/>
         <TextView
             android:layout_below="@+id/tv_rg_city"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textColor="@color/color_888888"
             android:layout_marginTop="@dimen/margin_3"
             android:layout_marginLeft="@dimen/margin_15"
             android:text="不同地区价格稍有差异"/>
         <TextView
             android:id="@+id/tv_choose_address"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:textColor="@color/color_black"
             android:layout_marginRight="@dimen/margin_15"
             android:drawableRight="@mipmap/icon_recomend_down"
             android:drawablePadding="@dimen/margin_5"
             android:paddingTop="@dimen/margin_5"
             android:paddingBottom="@dimen/margin_5"
             android:textSize="14sp"
             android:textStyle="bold"
             android:text="地区"/>
     </RelativeLayout>


    <TextView
        android:id="@+id/tv_wxpay_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/shape_4r_8054"
        android:gravity="center"
        android:text="微信支付"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/tv_slivemember_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>
