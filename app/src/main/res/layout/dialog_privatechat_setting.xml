<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/shape_white_8r">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/string_privatechat_set"/>
    <TextView
        android:id="@+id/tv_diaog_content"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_25"
        android:text="为了给你营造一个健康的聊天环境，避免别人骚扰，你可以设置开启私聊的方式"
        android:textColor="@color/color_666666"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"/>
    <View
        android:layout_below="@+id/tv_diaog_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e6e6e6"/>
    <LinearLayout
        android:layout_below="@+id/tv_diaog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/color_666666"
            android:text="取消"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f5f7f9"/>
        <TextView
            android:id="@+id/tv_go_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:text="去设置"/>
    </LinearLayout>
</RelativeLayout>
