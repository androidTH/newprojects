<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.d6zone.android.app.widget.SwipeRefreshRecyclerLayout
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/navigation_back_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/tv_title_nick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_size"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:textColor="@color/textColor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_more_white"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp" />
        <TextView
            android:id="@+id/tv_online_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_35"
            android:textSize="12sp"
            android:gravity="center"
            android:drawablePadding="@dimen/margin_3"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_doaction"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_bottom_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_userinfo_giftred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawablePadding="5dp"
                android:background="@drawable/taren_redbutton_bg"
                android:src="@mipmap/gift_red_icon"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:paddingRight="30dp"
                android:paddingBottom="12dp" />

            <!--android:background="@drawable/shape_30r_orange"-->

            <RelativeLayout
                android:id="@+id/tv_siliao"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/taren_yellowbutton_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/siliao_icon"
                    android:drawablePadding="2dp"
                    android:layout_centerInParent="true"
                    android:text="@string/string_siliao"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
        <com.d6zone.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_sendredheart"
            android:layout_toRightOf="@+id/ll_bottom_tool"
            android:background="@drawable/taren_redbutton_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="[img src=taren_red_icon/]"
            android:textSize="12sp"
            android:textStyle="bold"
            app:imageAlignment="center"
            app:imageSize="0dp" />
    </RelativeLayout>

    <com.d6zone.android.app.widget.LoveHeart
        android:id="@+id/userinfo_loveheart"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/ll_gift_parent"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:orientation="vertical">
    </LinearLayout>
</RelativeLayout>