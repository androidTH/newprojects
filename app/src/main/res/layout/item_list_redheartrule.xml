<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_readheart"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/shape_ef"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15"
    android:paddingTop="@dimen/margin_10"
    android:paddingRight="@dimen/margin_15"
    android:paddingBottom="@dimen/margin_10">

    <TextView
        android:id="@+id/tv_readheart_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textStyle="bold"
        android:drawableRight="@mipmap/redheart_small"
        android:drawablePadding="@dimen/margin_3"
        android:textColor="@color/color_333333" />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="@dimen/margin_5"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_readheart_money"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="--"
           android:textColor="@color/color_F7AB00"
           android:textSize="15sp"/>
       <TextView
           android:id="@+id/tv_readheart_nomoney"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/margin_5"
           android:text="--"
           android:visibility="gone"
           android:textColor="@color/color_888888"
           android:textSize="12sp"/>
   </LinearLayout>
</LinearLayout>
