<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_5"
    android:paddingTop="@dimen/margin_5"
    android:paddingBottom="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/rl_play_audio"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:visibility="gone"
        android:background="@drawable/shape_17r_26">

        <ImageView
            android:id="@+id/iv_playaudio"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:src="@mipmap/liveroom_recording3" />

        <ProgressBar
            android:id="@+id/audio_loading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_playaudio"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:indeterminateTint="@color/color_F7AB00" />
        <TextView
            android:id="@+id/tv_audio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/color_F7AB00"
            android:textSize="12sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_delete_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10"
        android:visibility="gone"
        android:drawableLeft="@mipmap/dele_button"/>
</LinearLayout>
