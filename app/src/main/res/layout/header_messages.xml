<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_sys_msgs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="3dp"
            android:text="系统消息"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:text="暂无消息"
            android:textColor="@color/textColor99"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_msg_count1"
            android:layout_width="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_4r_red_ff3"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        style="@style/view_line_h"
        android:layout_marginLeft="80dp" />

    <RelativeLayout
        android:id="@+id/rl_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_square_msgs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="3dp"
            android:text="广场消息"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv2"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="40dp"
            android:singleLine="true"
            android:text="暂无消息"
            android:textColor="@color/textColor99"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_msg_count2"
            android:layout_width="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_4r_red_ff3"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        style="@style/view_line_h"
        android:layout_marginLeft="80dp" />
</LinearLayout>