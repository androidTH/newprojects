<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_8"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/group_headView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:roundingBorderWidth="1dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_15"
            app:failureImage="@mipmap/group_nor_pic"
            app:placeholderImage="@mipmap/group_nor_pic"
            style="@style/NoDefaultHeadStyle"/>
        <TextView
            android:id="@+id/tv_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_groupcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_moreusers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            android:drawableRight="@mipmap/center_moreicon"
            android:drawablePadding="@dimen/margin_3" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_grouplist"
            android:layout_below="@+id/tv_groupcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_member_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="群号"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_50"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:text="(分享给好友即可邀请)"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_groupnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_30"
            android:drawablePadding="@dimen/margin_3"
            android:textColor="@color/color_888888"
            android:gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_13"
            android:drawableRight="@mipmap/center_moreicon"
            android:drawablePadding="@dimen/margin_3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_group_leave"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_F7AB00" />
</LinearLayout>
