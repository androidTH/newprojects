<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@mipmap/window_close_orangebutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:textSize="17sp"
            android:text="@string/string_contacts"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/color_EAEAEA"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:background="@color/color_EAEAEA">
        <EditText
            android:id="@+id/et_searchfriends"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:drawableLeft="@mipmap/search_gray_input"
            android:drawablePadding="@dimen/margin_5"
            android:singleLine="true"
            android:textColorHint="@color/color_888888"
            android:hint="搜索"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:imeOptions="actionSearch"
            android:background="@drawable/shape_10r_white"/>
    </RelativeLayout>
    <com.d6.android.app.widget.SwipeRefreshRecyclerLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/rl_friends_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tv_main_card_bg_im_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/wuhuaoyou_pic" />
        <TextView
            android:id="@+id/tv_main_card_Bg_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_below="@+id/tv_main_card_bg_im_id"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/margin_5"
            android:padding="@dimen/padding_12"
            android:text="暂无好友\n暂时没有符合条件的人，等会再来看看吧"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/textSize"/>
    </RelativeLayout>
</LinearLayout>
