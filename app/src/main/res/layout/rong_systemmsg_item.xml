<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginTop="@dimen/margin_15">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_ic_bubble_left"
        android:paddingLeft="9dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/group_headview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                style="@style/DefaultCircleHeadStyle"
                android:src="@mipmap/quanguo_icon" />

            <TextView
                android:id="@+id/tv_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_group_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_group_no"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_ebeb"
                android:gravity="center"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:text="拒绝"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_group_agree"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@drawable/shape_orange"
                android:gravity="center"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/line_group"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/color_EFEFEF" />

        <TextView
            android:id="@+id/tv_checkmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_8"
            android:drawableRight="@mipmap/comment_more"
            android:drawablePadding="@dimen/margin_5"
            android:text="点击查看"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
