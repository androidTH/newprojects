<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:drawableBottom="@mipmap/ic_unauth_search"
            android:drawablePadding="12dp"
            android:lineSpacingExtra="4dp"
            android:text="您的帐号未认证\n请先联系微信客服进行认证"
            android:textColor="@color/color_369" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="120dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:text="认证后的特权"
                android:gravity="center"
                android:textColor="@color/color_369"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:layout_marginTop="40dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:lineSpacingExtra="4dp"
                android:id="@+id/tv_content"
                android:textSize="12sp"
                android:textColor="@color/orange_f6a"
                android:text="1、解锁广场、自主发布功能\n2、解锁广场互动功能\n3、解锁与自主发布会员私聊功能\n4、解锁筛选、觅约详情功能"
                android:paddingRight="12dp"/>
            <View style="@style/view_line_h"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_action"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/shape_orange_rounded"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="12dp"
            android:text="微信号:000000  点击复制微信号"/>
    </LinearLayout>
</ScrollView>
