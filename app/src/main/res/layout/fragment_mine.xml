<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mSwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_my_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_16">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/headView"
                    style="@style/DefaultHeadStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/headView"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/headView"
                    android:singleLine="true"
                    android:text="---"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/headView"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/headView"
                    android:background="@drawable/shape_4r_orange_line"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="--"
                    android:textColor="@color/orange_f6a"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_right_gray_24dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_my_square"
                style="@style/mineTextStyle"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/ic_my_square"
                android:text="我的广场" />

            <ImageView
                style="@style/ImageView_h"
                android:paddingLeft="40dp" />

            <TextView
                android:id="@+id/tv_contact_us"
                style="@style/mineTextStyle"
                android:drawableLeft="@mipmap/ic_contact_us"
                android:text="联系我们" />

            <ImageView
                style="@style/ImageView_h"
                android:paddingLeft="40dp" />

            <TextView
                android:id="@+id/tv_online_service"
                style="@style/mineTextStyle"
                android:drawableLeft="@mipmap/ic_custom_service"
                android:text="在线客服" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_messages"
                    style="@style/mineTextStyle"
                    android:drawableLeft="@mipmap/ic_msgs"
                    android:text="消息" />

                <TextView
                    android:id="@+id/tv_msg_count1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/shape_4r_red"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                style="@style/ImageView_h"
                android:paddingLeft="40dp" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/mineTextStyle"
                android:drawableLeft="@mipmap/ic_feedback"
                android:text="意见反馈" />

            <ImageView
                style="@style/ImageView_h"
                android:paddingLeft="40dp" />

            <TextView
                android:id="@+id/tv_aboutUs"
                style="@style/mineTextStyle"
                android:drawableLeft="@mipmap/ic_about_us"
                android:text="关于我们" />

            <ImageView
                style="@style/ImageView_h"
                android:paddingLeft="40dp" />

            <TextView
                android:id="@+id/tv_search_weChat"
                style="@style/mineTextStyle"
                android:drawableLeft="@mipmap/ic_scan"
                android:text="微信查询" />

            <TextView
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/shape_4r_red"
                android:gravity="center"
                android:padding="@dimen/padding_16"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/btnTextSize" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>