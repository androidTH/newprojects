<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="65dp"
    android:paddingBottom="@dimen/margin_8"
    android:paddingTop="@dimen/margin_8">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/group_headView"
        style="@style/DefaultHeadStyle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_10"
        app:roundedCornerRadius="26dp" />

    <LinearLayout
        android:id="@+id/linear_userinfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="@dimen/margin_45"
        android:layout_toRightOf="@+id/group_headView"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_groupnums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_888888"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_10"
        android:visibility="gone"
        android:background="@mipmap/icon_discuss_more_feed" />
</RelativeLayout>
