<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_back_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_5"
                android:src="@mipmap/window_close_orangebutton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="17sp"
                android:text="发红包"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:paddingRight="@dimen/margin_15"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="红包总额"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:drawablePadding="@dimen/margin_10"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_redmoney"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/trans_parent"
                android:layout_marginRight="@dimen/margin_25"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_d1d1d1"
                android:hint="请输入你要包的红包数量"
                android:gravity="center|right"
                android:inputType="number"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@mipmap/redheart_small"/>
        </RelativeLayout>
        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_redmoney_tips"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:textColor="@color/color_d1d1d1"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingRight="@dimen/margin_15"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="红包个数"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_redmoney_nums"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/trans_parent"
                android:drawablePadding="@dimen/margin_3"
                android:layout_marginRight="@dimen/margin_20"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_d1d1d1"
                android:hint="填写个数"
                android:inputType="number"
                android:gravity="center|right"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_black"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:text="个"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingRight="@dimen/margin_15"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="红包描述"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tv_redmoney_desc"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/trans_parent"
                android:drawablePadding="@dimen/margin_3"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_d1d1d1"
                android:hint="来自XXX的小心心"
                android:gravity="center|right"
                android:maxLength="10"
                android:textSize="15sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_create_redmoney"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="塞进红包"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/shape_6r_be4d"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"/>

    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/ll_buyloveheart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_surplusnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_888888"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_buyloveheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_toRightOf="@+id/tv_surplusnums"
            android:textColor="@color/color_F7AB00"
            android:background="@drawable/shape_2r_white"
            android:paddingLeft="@dimen/margin_6"
            android:paddingRight="@dimen/margin_6"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3"
            android:textSize="12sp"
            android:text="点击购买"/>
    </RelativeLayout>
</RelativeLayout>
