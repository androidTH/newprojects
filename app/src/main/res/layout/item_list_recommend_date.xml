<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:roundAsCircle="false"
            app:roundedCornerRadius="@dimen/margin_5"
            app:viewAspectRatio="1"
            style="@style/DefaultImageStyle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rgpic_bg"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_25"
            android:paddingBottom="@dimen/margin_10">

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/sex_selector"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_auth_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@mipmap/vip_gold"
                    android:drawablePadding="@dimen/margin_1"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_auth_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:drawablePadding="@dimen/margin_1"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_8"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_name"
                android:gravity="center_vertical"
                android:text="28 180CM 80KG"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingTop="@dimen/margin_5"
                 android:paddingBottom="@dimen/margin_5"
                 android:layout_below="@+id/tv_address"
                 android:orientation="horizontal">
                 <TextView
                     android:id="@+id/tv_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="@dimen/margin_2"
                     android:background="@drawable/shape_squareorange_1r"
                     android:paddingLeft="@dimen/margin_2"
                     android:paddingTop="1dp"
                     android:paddingBottom="1dp"
                     android:paddingRight="@dimen/margin_2"
                     android:text=""
                     android:textColor="@color/color_F7AB00"
                     android:textSize="9sp" />
                 <TextView
                     android:id="@+id/tv_content"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ellipsize="end"
                     android:gravity="center_vertical"
                     android:singleLine="true"
                     android:textColor="@color/white"
                     android:textSize="12sp" />
             </LinearLayout>

            <TextView
                android:id="@+id/tv_booking"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_orange_6r"
                android:gravity="center"
                android:text="报名"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>