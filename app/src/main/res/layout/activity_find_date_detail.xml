<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:minHeight="150dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address_num"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-26dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_vip"
                        android:textSize="13sp"
                        android:drawablePadding="4dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_369"
                        android:paddingBottom="8dp"
                        android:text="--" />
                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tv_vip"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:text="年龄"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:text="身高"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="体重"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:text="职业"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ll"
                        android:paddingBottom="12dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:text="00"
                            android:textColor="@color/color_369"
                            android:singleLine="true"
                            android:gravity="center"
                            android:id="@+id/tv_age"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <View android:layout_height="10dp"
                            android:layout_width="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textColor99"/>
                        <TextView
                            android:layout_width="0dp"
                            android:text="00"
                            android:textColor="@color/color_369"
                            android:singleLine="true"
                            android:gravity="center"
                            android:id="@+id/tv_height"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <View android:layout_height="10dp"
                            android:layout_width="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textColor99"/>
                        <TextView
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/color_369"
                            android:singleLine="true"
                            android:id="@+id/tv_weight"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <View android:layout_height="10dp"
                            android:layout_width="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/textColor99"/>
                        <TextView
                            android:layout_width="0dp"
                            android:text="--"
                            android:id="@+id/tv_job"
                            android:textColor="@color/color_369"
                            android:gravity="center"
                            android:maxLength="6"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <View style="@style/view_line_h"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_alignBottom="@+id/ll1"
                        android:paddingRight="@dimen/padding_16"/>
                    <LinearLayout
                        android:id="@+id/ll5"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_below="@+id/ll1"
                        android:paddingTop="20dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll4"
                            android:layout_marginBottom="12dp"
                            android:paddingLeft="@dimen/padding_16"
                            android:visibility="gone"
                            android:paddingRight="@dimen/padding_16"
                            android:paddingBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:background="@drawable/shape_line_366_4r"
                                android:padding="6dp"
                                android:layout_marginRight="8dp"
                                android:text="座驾"/>
                            <TextView
                                android:id="@+id/tv_car"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="12sp"
                                android:textColor="@color/textColor99"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_below="@+id/ll4"
                            android:paddingLeft="@dimen/padding_16"
                            android:paddingRight="@dimen/padding_16"
                            android:paddingBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:background="@drawable/shape_line_366_4r"
                                android:padding="6dp"
                                android:layout_marginRight="8dp"
                                android:text="兴趣爱好"/>
                            <TextView
                                android:id="@+id/tv_hobbit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="12sp"
                                android:textColor="@color/textColor99"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/ll5"
                        android:paddingLeft="@dimen/padding_16"
                        android:paddingRight="@dimen/padding_16"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:background="@drawable/shape_line_366_4r"
                            android:padding="6dp"
                            android:layout_marginRight="8dp"
                            android:text="要求"/>
                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:paddingBottom="8dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/textColor99"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_address_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_images"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_6r_orange_line"
                android:gravity="center"
                android:maxWidth="280dp"
                android:padding="8dp"
                android:singleLine="true"
                android:text="----"
                android:textColor="@color/color_369"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_15"
            android:textColor="@color/textColor99"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:textSize="@dimen/textSize_12"
            android:text="@string/date_wenan" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/orange_gray_selector"
            android:gravity="center"
            android:text="联系客服"
            android:textColor="@color/white"
            android:textSize="@dimen/btnTextSize" />
    </LinearLayout>
</RelativeLayout>