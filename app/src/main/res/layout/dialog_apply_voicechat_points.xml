<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_white_8r"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center_horizontal"
            android:text="申请连麦"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:visibility="gone"
            android:textStyle="bold" />

        <com.d6.android.app.widget.textinlineimage.TextInlineImage
            android:id="@+id/tv_voicechat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/margin_20"
            android:gravity="center_horizontal"
            android:text="请预存本次聊天打赏的喜欢数，当预存的喜欢数打赏玩后将自动过期，如果过了有效期，剩余的将会返还"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/color_black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_voicechat_redheart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_user_lovepoint"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20">
            <com.d6.android.app.widget.textinlineimage.TextInlineImage
                android:id="@+id/tv_redheart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:drawablePadding="@dimen/margin_5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="剩余 [img src=redheart_small/] 不足 (剩余30)"/>
            <TextView
                android:id="@+id/tv_redheart_gobuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_F7AB00"
                android:layout_marginLeft="@dimen/margin_8"
                android:padding="@dimen/margin_5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="点击购买"/>
            <!--android:background="@drawable/shape_orange_2r_radius"-->

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_close_orange2"/>
</RelativeLayout>