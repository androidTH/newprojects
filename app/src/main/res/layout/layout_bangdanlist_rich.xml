<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rankinglist_bg" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout_bangdanlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_bangdanlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/ll_self_bangdan_order"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:elevation="@dimen/margin_2"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@mipmap/topshadow_png"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_65"
            android:padding="@dimen/margin_5"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_self_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="85"
                android:textColor="@color/color_888888"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_self_headView"
                style="@style/DefaultHeadStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_13"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/tv_self_order"
                app:roundedCornerRadius="26dp" />

            <LinearLayout
                android:id="@+id/linear_self_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@+id/user_self_headView"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_self_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxWidth="80dp"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_self_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/ic_sex_bg_selector"
                        android:drawableLeft="@drawable/sex_white_selector"
                        android:drawablePadding="1dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="0.5dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="0.5dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_self_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/ic_sex_bg_selector"
                        android:paddingLeft="3dp"
                        android:paddingTop="0.5dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="0.5dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_self_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_16"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/vip_gold"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_self_userinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:background="@drawable/shape_2r_33_bg"
                    android:ellipsize="end"
                    android:padding="@dimen/margin_2"
                    android:singleLine="true"
                    android:textColor="@color/color_8F5A5A"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_self_receivedliked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_click_bangdan"
                    android:layout_marginRight="@dimen/margin_6"
                    android:drawableRight="@mipmap/redheart_small"
                    android:drawablePadding="@dimen/margin_5"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_5"
                    android:textColor="@color/color_666666"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_click_bangdan"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="@drawable/shape_20r_orange"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    android:text="冲榜"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>